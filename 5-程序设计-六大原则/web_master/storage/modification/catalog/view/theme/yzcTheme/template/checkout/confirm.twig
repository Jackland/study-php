{% if not redirect %}
  <script src="catalog/view/javascript/jquery/countdown.js?v={{ timestamp }}" type="text/javascript"></script>
  <div class="table-responsive">
    <h4 style="color: red">{{ expire_time_notice }}</h4>
    <div class="wrapper" id="countDown">
      <div class="cell">
        <div id="holder">
          <div class="digits"></div>
        </div>
      </div>
    </div>
  </div>
  <table class="table main table-hover">
    <thead>
    <tr>
      {% set colspan = 7 %}
      <th class="text-left">Image</th>
      <th class="text-left">{{ column_itemCode }}</th>
      {#<th class="text-left" style="width: 45%">{{ column_name }}</th>#}
      <th class="text-left">Store</th>
      <th class="text-left">Transaction Type</th>
      <th class="text-right">QTY</th>

      {% if delivery_date is defined and delivery_date %}
        <th class="text-right">{{ text_delivery_date }}</th>
        {% set colspan=colspan+1 %}
      {% endif %}
      <th class="text-center">Unit Price After Discount</th>
      {% if isEuropean %}
        <th class="text-center">Service Fee After Discount</th>
        {% set colspan=colspan+1 %}
      {% endif %}
      <th class="text-right">Freight Per Unit</th>
      <th class="text-right">Total</th>
    </tr>
    </thead>
    <tbody>

    {% for product in products %}
      <tr>
        {#image#}
        <td class="text-center">
          {% if product.thumb %}
            <a href="{{ product.href }}">
              <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}"
                   class="img-thumbnail" style="max-width: 120px;"/>
            </a>
          {% endif %}
        </td>
        {% if product.tag %}
          <td class="text-left" style="min-width: 120px">{{ product.sku }}
            {% for tagDetail in product.tag %}
              {{ tagDetail }}
            {% endfor %}
          </td>
        {% else %}
          <td class="text-left">{{ product.sku }}</td>
        {% endif %}
        {#<td class="text-left"><a href="{{ product.href }}">{{ product.name }}</a>#}
          {#{% for option in product.option %}#}
            {#<br/> &nbsp;#}
            {#<small> - {{ option.name }}: {{ option.value }}</small>#}
          {#{% endfor %}#}
          {#{% if product.recurring %} <br/>#}
            {#<span class="label label-info">{{ text_recurring_item }}</span>#}
            {#<small>{{ product.recurring }}</small>#}
          {#{% endif %}#}
        {#</td>#}
        <td class="text-left">{{ product.screenname }}</td>

        <td class="text-left">
          {% if product.type_id  == 1 %}
            Rebate:{{ product.agreement_code }}
          {% elseif product.type_id  == 2 %}
            Margin:{{ product.agreement_code }}
          {% elseif product.type_id  == 3 %}
            Future Goods:{{ product.agreement_code }}
          {% else %}
            {% if product.quote_amount != false   %}
              Spot Price
            {% else %}
              Normal Transaction
            {% endif %}
          {% endif %}
        </td>

        <td class="text-right"><span class="text-price">{{ product.quantity }}</span></td>

        {% if delivery_date is defined and delivery_date %}
          <td class="text-right">{{ product['delivery_date'] }}</td>
        {% endif %}

        <td class="text-center">
          {% if product.service_fee_per %}
            <span><img data-toggle='tooltip' title='Service Fee' style='width: 21.81px' src="{{ img_vat_url }}" /></span>
            <span>{{ product.product_price_per }}</span>
          {% else %}
            <span>{{ product.price }}</span>
          {% endif %}
        </td>
        {% if isEuropean %}
        <td class="text-center"><div class="price">{{ product.service_fee_per }}</div>
        {% endif %}
        <td class="text-right">{{ product.freight_per }}</td>
        <td class="text-right">{{ product.total }}</td>
      </tr>
    {% endfor %}
    {% for voucher in vouchers %}
      <tr>
        <td class="text-left">{{ voucher.description }}</td>
        <td class="text-left"></td>
        <td class="text-right">1</td>
        <td class="text-right">{{ voucher.amount }}</td>
        <td class="text-right">{{ voucher.amount }}</td>
      </tr>
    {% endfor %}
    </tbody>

    <tfoot>

    {% for total in totals %}
      <tr>
        {% if delivery_date is defined and delivery_date and quoteFlag %}
          <td colspan="{{ colspan }}" class="text-right"><strong>{{ total['title'] }}:</strong></td>
        {% elseif quoteFlag or isEuropean %}
          {% if isEuropean  and (total.title =='Item(s) Subtotal' or total.title == 'Total Item Discount') %}
            <td colspan="{{ colspan }}" class="text-right">
              <img data-toggle='tooltip' title='Service Fee' style='padding-right: 5px;width: 26px' src="{{ img_vat_url }}" />
              <strong>{{ total.title }}:</strong>
            </td>
          {% else %}
            <td colspan="{{ colspan }}" class="text-right"><strong>{{ total.title }}:</strong></td>
          {% endif %}
        {% else %}
          <td colspan="{{ colspan }}" class="text-right"><strong>{{ total.title }}:</strong></td>
        {% endif %}

        <td class="text-right" {% if total.title == 'Grand Total' %} style="color: red" {% endif %}>{{ total.text }}</td>
      </tr>
    {% endfor %}
    {% if paymethod == 'line_of_credit' %}
      <tr>
        {% if delivery_date is defined and delivery_date and quoteFlag %}
          <td colspan="{{ colspan }}" class="text-right"><strong>Line of Credit (Balance):</strong></td>
        {% elseif quoteFlag or isEuropean %}
          <td colspan="{{ colspan }}" class="text-right"><strong>Line of Credit (Balance):</strong></td>
        {% else %}
          <td colspan="{{ colspan }}" class="text-right"><strong>Line of Credit (Balance):</strong></td>
        {% endif %}
        <td class="text-right">{{ line_of_credit_balance }}</td>
      </tr>
    {% endif %}
    </tfoot>

  </table>
  {{ payment }}

{% else %}
  <script type="text/javascript"><!--
    location = '{{ redirect }}';
    //--></script>
{% endif %}
<script>

  $(function(){

    $(".digits").countdown({

      image: "catalog/view/theme/yzcTheme/image/digits.png",

      format: "mm:ss",

      startTime: {{ expire_time}}

    });

  });
</script>

<script>
$('input[name=\'filter_customername\']').autocomplete({
  delay: 0,
  source: function(request, response) {
    $.ajax({
      url: 'index.php?route=customerpartner/partner/autocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request)+'&filter_view=0',
      dataType: 'json',
      beforeSend: function() {
        $('input[name=\'filter_customer_id\']').val('');
      },
      success: function(json) {
        json[json.length] = {
          'id': 0,
          'name': 'admin',
          'email': '',
        }
        response($.map(json, function(item) {
          console.log(json);
          return {
            label: item.name,
            value: item.id
          }
        }));
      }
    });
  },
  'select': function(item) {
    $('input[name=\'filter_customername\']').val(item['label']);
    $('input[name=\'filter_customer_id\']').val(item['value']);
  }
});
</script>

    <div class="">
      <div id="filter-customer" class="">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-filter"></i> {{ text_filter }}</h3>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label" for="input-nickname">{{ entry_nickname }}</label>
                  <input type="text" name="filter_nickname" value="{{ filter_nickname }}" placeholder="{{ entry_nickname }}" id="input-nickname" class="form-control" />
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label" for="input-name">{{ entry_name }}</label>
                  <input type="text" name="filter_name" value="{{ filter_name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label" for="input-email">{{ entry_email }}</label>
                  <input type="text" name="filter_email" value="{{ filter_email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label" for="input-customer-group">{{ entry_customer_group }}</label>
                  <select name="filter_customer_group_id" id="input-customer-group" class="form-control">
                    <option value=""></option>
                    {% for customer_group in customer_groups %}
                      {% if customer_group.customer_group_id == filter_customer_group_id %}
                        <option value="{{ customer_group.customer_group_id }}" selected="selected">{{ customer_group.name }}</option>
                      {% else %}
                        <option value="{{ customer_group.customer_group_id }}">{{ customer_group.name }}</option>
                      {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label" for="input-status">{{ entry_status }}</label>
                  <select name="filter_status" id="input-status" class="form-control">
                    <option value=""></option>
                    {% if filter_status == '1' %}
                      <option value="1" selected="selected">{{ text_enabled }}</option>
                    {% else %}
                      <option value="1">{{ text_enabled }}</option>
                    {% endif %}
                    {% if filter_status == '0' %}
                      <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% else %}
                      <option value="0">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label" for="input-ip">{{ entry_ip }}</label>
                  <input type="text" name="filter_ip" value="{{ filter_ip }}" placeholder="{{ entry_ip }}" id="input-ip" class="form-control" />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label" for="input-country-id">{{ entry_country }}</label>
                  <select name="filter_country_id" id="input-country-id" class="form-control">
                    <option value=""></option>
                    {% for country in countrys %}
                      {% if country.country_id == filter_country_id %}
                        <option value="{{ country.country_id }}" selected="selected">{{ country.country_name }}</option>
                      {% else %}
                        <option value="{{ country.country_id }}">{{ country.country_name }}</option>
                      {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label" for="input-is-partner">{{ entry_is_partner }}</label>
                  <select name="filter_is_partner" id="input-is-partner" class="form-control">
                    <option value=""></option>
                    {% if filter_is_partner == '1' %}
                      <option value="1" selected="selected">{{ text_y }}</option>
                    {% else %}
                      <option value="1">{{ text_y }}</option>
                    {% endif %}
                    {% if filter_is_partner == '0' %}
                      <option value="0" selected="selected">{{ text_n }}</option>
                    {% else %}
                      <option value="0">{{ text_n }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label" for="input-screenname">{{ entry_screenname }}</label>
                  <input type="text" name="filter_screenname" value="{{ filter_screenname }}" placeholder="{{ entry_screenname }}" id="input-screenname" class="form-control" />
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label" for="input-accounting-type-id">{{ column_accounting_type }}</label>
                  <select name="filter_accounting_type_id" id="input-accounting-type-id" class="form-control">
                    <option value=""></option>
                    {% for account_type in accounting_types %}
                      {% if account_type.type_id == filter_accounting_type_id %}
                        <option value="{{ account_type.type_id }}" selected="selected">{{ account_type.type_name }}</option>
                      {% else %}
                        <option value="{{ account_type.type_id }}">{{ account_type.type_name }}</option>
                      {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>

              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label" for="input-date-added">{{ entry_date_added }}</label>
                  <div class="input-group date">
                    <input type="text" name="filter_date_added" value="{{ filter_date_added }}" placeholder="{{ entry_date_added }}" data-date-format="YYYY-MM-DD" id="input-date-added" class="form-control" />
                    <span class="input-group-btn">
                      <button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
                    </span>
                  </div>
                </div>
              </div>

              <div class="col-md-4">
                <div class="form-group text-right">
                  <button type="button" style="margin-top: 15px" id="button-filter" data-toggle="tooltip" title="{{ button_filter }}" class="btn btn-primary button_filter"><i class="fa fa-filter"></i> {{ button_filter }}</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
          </div>
          <div class="panel-body">
            <div class="">
{#              <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-customer">#}
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <td>No.</td>
                      <td class="text-left">{% if sort == 'nickname' %}<a href="{{ sort_nickname }}" class="{{ order|lower }}">{{ column_nickname }}</a>{% else %}<a href="{{ sort_nickname }}">{{ column_nickname }}</a>{% endif %}</td>
                      <td class="text-left">{% if sort == 'name' %}<a href="{{ sort_name }}" class="{{ order|lower }}">{{ column_name }}</a>{% else %}<a href="{{ sort_name }}">{{ column_name }}</a>{% endif %}</td>
                      <td class="text-left">{% if sort == 'ctc.screenname' %}<a href="{{ sort_screenname }}" class="{{ order|lower }}">{{ column_screenname }}</a>{% else %}<a href="{{ sort_screenname }}">{{ column_screenname }}</a>{% endif %}</td>
                      <td class="text-left">{% if sort == 'ctc.is_partner' %}<a href="{{ sort_is_partner }}" class="{{ order|lower }}">{{ column_is_partner }}</a>{% else %}<a href="{{ sort_is_partner }}">{{ column_is_partner }}</a>{% endif %}</td>
                      <td class="text-left">{% if sort == 'c.email' %}<a href="{{ sort_email }}" class="{{ order|lower }}">{{ column_email }}</a>{% else %}<a href="{{ sort_email }}">{{ column_email }}</a>{% endif %}</td>
                      <td class="text-left">{% if sort == 'customer_group' %}<a href="{{ sort_customer_group }}" class="{{ order|lower }}">{{ column_customer_group }}</a> {% else %} <a href="{{ sort_customer_group }}">{{ column_customer_group }}</a>{% endif %}</td>
                      <td class="text-left">{% if sort == 'c.country_id' %}<a href="{{ sort_country }}" class="{{ order|lower }}">{{ column_country }}</a>{% else %}<a href="{{ sort_country }}">{{ column_country }}</a>{% endif %}</td>
                      <td class="text-left">{% if sort == 'c.status' %}<a href="{{ sort_status }}" class="{{ order|lower }}">{{ column_status }}</a>{% else %}<a href="{{ sort_status }}">{{ column_status }}</a>{% endif %}</td>
                      <td class="text-left">{% if sort == 'c.ip' %}<a href="{{ sort_ip }}" class="{{ order|lower }}">{{ column_ip }}</a>{% else %}<a href="{{ sort_ip }}">{{ column_ip }}</a>{% endif %}</td>
                      <td class="text-left">{{ column_accounting_type }}</td>
                      <td class="text-left">{% if sort == 'c.date_added' %}<a href="{{ sort_date_added }}" class="{{ order|lower }}">{{ column_date_added }}</a>{% else %}<a href="{{ sort_date_added }}">{{ column_date_added }}</a>{% endif %}</td>
                      <td class="text-right">{{ column_action }}</td>
                    </tr>
                  </thead>
                  <tbody>
                  {% if customers %}
                  {% for customer in customers %}
                  <tr>
                    <td>{{ customer.num }}</td>
                    <td class="text-left">{{ customer.nickname }}</td>
                    <td class="text-left">{{ customer.name }}</td>
                    <td class="text-left">{{ customer.screenname }}</td>
                    <td class="text-center">{% if customer.is_partner == 0 %}N{% else %}Y{% endif %}</td>
                    <td class="text-left">{{ customer.email }}</td>
                    <td class="text-left">{{ customer.customer_group }}</td>
                    <td class="text-left">{{ customer.country_name }}</td>
                    <td class="text-left">{{ customer.status }}</td>
                    <td class="text-left">{{ customer.ip }}</td>
                    <td class="text-left">{{ customer.user_attribute }}</td>
                    <td class="text-left">{{ customer.date_added }}</td>
                    <td class="text-right">
                      <div class="btn-group" style="min-width: 65px;">
                        <a href="{{ customer.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                        <button type="button" data-toggle="dropdown" class="btn btn-primary dropdown-toggle"><span class="caret"></span></button>
                        <ul class="dropdown-menu dropdown-menu-right">
                          <li class="dropdown-header">{{ text_option }}</li>
                          {% if customer.unlock %}
                          <li><a href="{{ customer.unlock }}"><i class="fa fa-unlock"></i> {{ text_unlock }}</a></li>
                          {% else %}
                          <li class="disabled"><a><i class="fa fa-unlock"></i> {{ text_unlock }}</a></li>
                          {% endif %}
                          <li role="separator" class="divider"></li>
                          <li class="dropdown-header">{{ text_login }}</li>
                          {% for store in customer.store %}
                          <li><a href="{{ store.href }}" target="_blank"><i class="fa fa-lock"></i> {{ store.name }}</a></li>
                          {% endfor %}
                        </ul>
                      </div>
                    </td>
                  </tr>
                  {% endfor %}
                  {% else %}
                  <tr>
                    <td class="text-center" colspan="12">{{ text_no_results }}</td>
                  </tr>
                  {% endif %}
                    </tbody>
                </table>
{#              </form>#}
            </div>
            <div class="row">
              <div class="col-sm-12">
                <div class="pull-left">
                  <div class="table-bottom-action hide">
                    <div class="bottom-action-left">
                      <i class="fa fa-right-angle"></i>
                      <button type="button" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger"
                              onclick="confirm('{{ text_confirm }}') ? $('#form-customer').submit() : false;">
                        <i class="fa fa-trash-o"></i>
                      </button>
                      <span class="bottom-action-detail"></span>
                    </div>
                  </div>
                </div>
                <div class="pull-right">{{ pagination }}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript"><!--
  $('.table-responsive').on('shown.bs.dropdown', function (e) {
    var t = $(this),
      m = $(e.target).find('.dropdown-menu'),
      tb = t.offset().top + t.height(),
      mb = m.offset().top + m.outerHeight(true),
      d = 20;
    if (t[0].scrollWidth > t.innerWidth()) {
      if (mb + d > tb) {
        t.css('padding-bottom', ((mb + d) - tb));
      }
    } else {
      t.css('overflow', 'visible');
    }
  }).on('hidden.bs.dropdown', function () {
    $(this).css({'padding-bottom': '', 'overflow': ''});
  });
  //--></script>
  <script type="text/javascript"><!--
    function filter() {
      url = 'index.php?route=customer/customer&user_token={{ user_token }}';
      var filter_nickname = $('input[name=\'filter_nickname\']').val();
      if (filter_nickname) {
        url += '&filter_nickname=' + encodeURIComponent(filter_nickname);
      }
      var filter_name = $('input[name=\'filter_name\']').val();
      if (filter_name) {
        url += '&filter_name=' + encodeURIComponent(filter_name);
      }
      var filter_email = $('input[name=\'filter_email\']').val();
      if (filter_email) {
        url += '&filter_email=' + encodeURIComponent(filter_email);
      }
      var filter_customer_group_id = $('select[name=\'filter_customer_group_id\']').val();
      if (filter_customer_group_id !== '') {
        url += '&filter_customer_group_id=' + encodeURIComponent(filter_customer_group_id);
      }
      var filter_status = $('select[name=\'filter_status\']').val();
      if (filter_status !== '') {
        url += '&filter_status=' + encodeURIComponent(filter_status);
      }
      var filter_ip = $('input[name=\'filter_ip\']').val();
      if (filter_ip) {
        url += '&filter_ip=' + encodeURIComponent(filter_ip);
      }
      var filter_date_added = $('input[name=\'filter_date_added\']').val();
      if (filter_date_added) {
        url += '&filter_date_added=' + encodeURIComponent(filter_date_added);
      }
      var filter_screenname = $.trim($('input[name="filter_screenname"]').val());
      if(filter_screenname) {
        url += '&filter_screenname=' + encodeURIComponent(filter_screenname);
      }
      var filter_is_partner = $('select[name="filter_is_partner"]').val();
      if(filter_is_partner){
        url += '&filter_is_partner=' + encodeURIComponent(filter_is_partner);
      }
      var filter_country_id = $('select[name="filter_country_id"]').val();
      if(filter_country_id){
        url += '&filter_country_id=' + encodeURIComponent(filter_country_id);
      }
      var filter_accounting_type_id = $('select[name="filter_accounting_type_id"]').val();
      if(filter_accounting_type_id){
        url += '&filter_accounting_type_id=' + encodeURIComponent(filter_accounting_type_id);
      }
      location = url;
    }
  $('#button-filter').on('click', function() {
    filter();
  });
    $(document).keyup(function(e){
      var key = e.which;
      if(key==13){
        filter();
      }
    });
  //--></script>
  <script type="text/javascript"><!--
  $('input[name=\'filter_name\']').autocomplete({
    'source': function(request, response) {
      $.ajax({
        url: 'index.php?route=customer/customer/autocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request),
        dataType: 'json',
        success: function(json) {
          response($.map(json, function(item) {
            return {
              label: item['name'],
              value: item['customer_id']
            }
          }));
        }
      });
    },
    'select': function(item) {
      $('input[name=\'filter_name\']').val(item['label']);
    }
  });
  $('input[name=\'filter_email\']').autocomplete({
    'source': function(request, response) {
      $.ajax({
        url: 'index.php?route=customer/customer/autocomplete&user_token={{ user_token }}&filter_email=' +  encodeURIComponent(request),
        dataType: 'json',
        success: function(json) {
          response($.map(json, function(item) {
            return {
              label: item['email'],
              value: item['customer_id']
            }
          }));
        }
      });
    },
    'select': function(item) {
      $('input[name=\'filter_email\']').val(item['label']);
    }
  });
    $('input[name=\'filter_screenname\']').autocomplete({
      'source': function(request, response) {
        if(request) {
          $.ajax({
            url: 'index.php?route=customer/customer/autocomplete&user_token={{ user_token }}&filter_screenname=' + encodeURIComponent(request) + '&sort=ctc.screenname',
            dataType: 'json',
            success: function (json) {
              response($.map(json, function (item) {
                return {
                  label: item['screenname'],
                  value: item['customer_id']
                }
              }));
            }
          });
        }
      },
      'select': function(item) {
        $('input[name=\'filter_screenname\']').val(item['label']);
      }
    });
  //--></script>

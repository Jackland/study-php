{{header}}{{column_left}}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-seller_coupon" data-toggle="tooltip" title="{{button_save}}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{cancel}}" data-toggle="tooltip" title="{{button_cancel}}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{heading_title}}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{breadcrumb.href}}">{{breadcrumb.text}}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i>{{error_warning}}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i>{{text_edit}}</h3>
      </div>
      <div class="panel-body">

        <form action="{{action}}" method="post" enctype="multipart/form-data" id="form-seller_coupon" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{entry_status}}</label>
            <div class="col-sm-10">
              <select name="module_seller_coupon_status" id="input-status" class="form-control">
                {% if module_seller_coupon_status %}
                <option value="1" selected="selected">{{text_enabled}}</option>
                <option value="0">{{text_disabled}}</option>
                {% else %}
                <option value="1">{{text_enabled}}</option>
                <option value="0" selected="selected">{{text_disabled}}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <div class="form-group" id="allowed-customer">
              <label class="col-sm-2 control-label"><span data-toggle="tooltip" title="{{help_seller_customer}}">{{entry_select_customer}}<i class="giga icon-V10-wenhaotishi"></i></span>
              </label>
              <div class="col-sm-10">
                <div class="well well-sm" style="height:150px;overflow:auto;">

                  {% for key, value in select_customer %}
                  <div class="checkbox">
                    <label>
                    {% if value in module_seller_coupon_customer_type %}
                      <input type="checkbox" name="module_seller_coupon_customer_type[]" value="{{value}}" checked="checked" />{{value}}
                     {% else %}
                     <input type="checkbox" name="module_seller_coupon_customer_type[]" value="{{value}}" />
                       {{value}}
                       {% endif %}
                    </label>
                  </div>
                  {% endfor %}
                  <label class="control-label">{{entry_customer_group}}</label>
                  {% for customer_group in customer_groups %}
                      <div class="checkbox">
                        <label>
                          {% if customer_group.customer_group_id in module_seller_coupon_customer_type.group %}
                            <input type="checkbox" name="module_seller_coupon_customer_type[group][]" value="{{customer_group.customer_group_id}}" checked="checked" />
                           {{customer_group.name}}
                            {% else %}
                            <input type="checkbox" name="module_seller_coupon_customer_type[group][]" value="{{customer_group.customer_group_id}}" />
                           {{customer_group.name}}
                           {% endif %}
                        </label>
                      </div>
                      {% endfor %}

              </div>
            </div>
          </div>

          <div class="form-group">
                <label class="col-sm-2 control-label" for="input-mail_coupon"><span data-toggle="tooltip" title="{{help_mail_coupon}}">{{entry_mail_coupon}}<i class="giga icon-V10-wenhaotishi"></i></span></label>
                <div class="col-sm-10">
                  <select name="module_seller_coupon_mail" id="input-seller_coupon_mail" class="form-control">
                    <option value=""></option>
                    {% if mails %}
                      {% for mail in mails %}
                        <option value="{{mail.id}}" {% if seller_coupon_mail == mail.id %}{{'selected'}}{% endif %}> {{mail.name}} </option>
                      {% endfor %}
                    {% endif %}
                  </select>
                </div>
          </div>
          <p class="text-info">{{help_mail_info}}</p>
          <table class="table">
            <thead>
              <tr>
                <td>{{text_for}}</td>
                <td>{{text_keyword}}</td>
              </tr>
            </thead>
          <tbody>
            <tr>
              <td>{{text_coupon_code}}</td>
              <td>{coupon_code}</td>
            </tr>
            <tr>
              <td>{{text_coupon_discount}}</td>
              <td>{coupon_discount}</td>
            </tr>
            <tr>
              <td>{{text_coupon_total}}</td>
              <td>{coupon_total}</td>
            </tr>
            <tr>
              <td>{{text_coupon_products}}</td>
              <td>{coupon_products}</td>
            </tr>
            <tr>
              <td>{{text_coupon_datefrom}}</td>
              <td>{coupon_date_from}</td>
            </tr>
            <tr>
              <td>{{text_coupon_dateto}}</td>
              <td>{coupon_date_to}</td>
            </tr>
          </tbody>
          </table>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $('#input-description').summernote({
    height: 300
  });
</script>
{{footer}}

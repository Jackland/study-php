{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" onclick="$(this).button('loading')" form="form-banner" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-banner" class="form-horizontal">
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
              {% if error_name %}
              <div class="text-danger">{{ error_name }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                {% if status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <br />
          <ul class="nav nav-tabs" id="language">
            {% for language in languages %}
            <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
            {% endfor %}
          </ul>
          <div class="tab-content">
            {# 筛选条件#}
            <div class="panel panel-default">
            <div class="panel-body">
            <div class="col-sm-6">
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_title }}</label>
                <div class=" col-sm-6">
                  <input type="text" name="filter_title" value="{{ filter_title }}" placeholder="{{ entry_title }}"
                       class="form-control"/>
                </div>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_country }}</label>
                <div class=" col-sm-6">
                  <select  name="filter_country" class="form-control" >
                  <option value="">- SELECT -</option>
                  {% for cty in countrys %}
                    <option value="{{ cty['country_id'] }}"  {% if filter_country==cty['country_id'] %}selected{% endif %}>{{ cty['name'] }}</option>
                  {% endfor %}
                  </select>
                </div>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_status }}</label>
                <div class=" col-sm-6">
                  <select  name="filter_status" value="{{ filter_status }}" placeholder="{{ entry_status }}" class="form-control">
                    <option value="">- ALL -</option>
                    <option value="1" {% if filter_status==1 %}selected{% endif %} >{{ text_enabled }}</option>
                    <option value="0" {% if filter_status is defined and filter_status==0 %}selected{% endif %}>{{ text_disabled }}</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="col-sm-6" >
              <div class="form-group pull-right" style="margin-right: 223px;">
                <button onclick="filter();" class="btn btn-primary pull-left">{{ button_filter }}</button>
            </div>
            </div>
          </div>
          </div>
            {% set image_row = 0 %}
            {% for language in languages %}
            <div class="tab-pane" id="language{{ language.language_id }}">
              <table id="images{{ language.language_id }}" class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <td class="text-center required">{{ entry_country }}</td>
                    <td class="text-center required">{{ entry_title }}</td>
                    <td class="text-center required">{{ entry_link }}</td>
                    <td class="text-center required">{{ entry_image }}</td>
                    <td class="text-center">{{ entry_sort_order }}</td>
                    <td class="text-center required">{{ entry_status }}</td>
                    <td></td>
                  </tr>
                </thead>
                <tbody>
                  {% if banner_images[language.language_id] %}
                  {% for banner_image in banner_images[language.language_id] %}
                  <tr id="image-row{{ image_row }}">
                    {# country#}
                    <td class="text-right" style="width:20%;">
                      <select   name="banner_image[{{ language.language_id }}][{{ image_row }}][country_id]" class="form-control" >
                        {% for cty in countrys %}
                          <option value="{{ cty['country_id'] }}"  {% if banner_image['country_id']==cty['country_id'] %}selected{% endif %}>{{ cty['name'] }}</option>
                        {% endfor %}
                      </select>
                    </td>
                    <td class="text-left">
                      <input type="text" name="banner_image[{{ language.language_id }}][{{ image_row }}][title]" value="{{ banner_image.title }}" placeholder="{{ entry_title }}" class="form-control" />
                        {% if error_banner_title[language.language_id][image_row] %}
                          <div class="text-danger">{{ error_banner_title[language.language_id][image_row] }}</div>
                        {% endif %}
                    </td>
                    <td class="text-left" style="width: 30%;">
                        <input type="text" name="banner_image[{{ language.language_id }}][{{ image_row }}][link]" value="{{ banner_image.link }}" placeholder="{{ entry_link }}" class="form-control" />
                        {% if error_banner_link[language.language_id][image_row] %}
                          <div class="text-danger">{{ error_banner_link[language.language_id][image_row] }}</div>
                        {% endif %}
                    </td>
                    <td class="text-center"><a href="" id="thumb-image{{ image_row }}" data-toggle="image" class="img-thumbnail"><img src="{{ banner_image.thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
                      <input type="hidden" name="banner_image[{{ language.language_id }}][{{ image_row }}][image]" value="{{ banner_image.image }}" id="input-image{{ image_row }}" />
                        {% if error_banner_image[language.language_id][image_row] %}
                          <div class="text-danger">{{ error_banner_image[language.language_id][image_row] }}</div>
                        {% endif %}
                    </td>
                    <td class="text-right" style="width: 10%;">
                        <input type="number" name="banner_image[{{ language.language_id }}][{{ image_row }}][sort_order]" value="{{ banner_image.sort_order }}" placeholder="{{ entry_sort_order }}" class="form-control" />
                        {% if error_banner_sort_order[language.language_id][image_row] %}
                          <div class="text-danger">{{ error_banner_sort_order[language.language_id][image_row] }}</div>
                        {% endif %}
                    </td>
                    <td class="text-right" style="width: 10%;">
                      <select   name="banner_image[{{ language.language_id }}][{{ image_row }}][status]" value="{{ banner_image.status }}" placeholder="{{ entry_status }}" class="form-control" >
                          <option value="1"  {% if banner_image['status']==1 %}selected{% endif %}>{{ text_enabled }}</option>
                          <option value="0"  {% if banner_image['status'] is defined and banner_image['status']==0 %}selected{% endif %}>{{ text_disabled }}</option>
                      </select>
                    </td>
                    <td class="text-left">
                        <input type="hidden" name="banner_image[{{ language.language_id }}][{{ image_row }}][banner_image_id]" value="{{ banner_image.banner_image_id }}"  />
                       <button type="button"  onclick="removeBanner(this);" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>
                  </tr>
                  {% set image_row = image_row + 1 %}
                  {% endfor %}
                  {% endif %}
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="6"></td>
                    <td class="text-left"><button type="button" onclick="addImage('{{ language.language_id }}');" data-toggle="tooltip" title="{{ button_banner_add }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button></td>
                  </tr>
                </tfoot>
              </table>
            </div>
            {% endfor %}
          </div>
        </form>
      </div>
    </div>
  </div>
  <style>
    .filter-tab{
      margin-left: 10px;
    }
  </style>
  <script type="text/javascript"><!--
    function filter() {
      var url = '{{ current }}';
      var filter_title = $('[name="filter_title"]').val();
      var filter_country = $('[name="filter_country"]').val();
      var filter_status = $('[name="filter_status"]').val();
      if(filter_title!=''){
        url += '&filter_title='+encodeURIComponent(filter_title);
      }
      if(filter_country!=''){
        url += '&filter_country='+filter_country;
      }
      if(filter_status!=''){
        url += '&filter_status='+filter_status;
      }
      $('form').remove()
      location = url;
    }

var image_row = {{ image_row }};
function addImage(language_id) {
	html  = '<tr id="image-row' + image_row + '">';
	// country
  html+= ' <td class="text-right" style="width: 20%;">' ;
  html+= '    <select   name="banner_image['+language_id+']['+image_row+'][country_id]"   placeholder="{{ entry_country }}" class="form-control" >' ;
  {% for cty in countrys %}
  html+= ' <option value="{{ cty.country_id }}" {% if cty.country_id==223 %}selected{% endif %}  >{{ cty.name|replace("'","\\'") }}</option>' ;
  {% endfor %}
  html+=     '   </select>' ;
  html+=     '  </td>' ;
    html += '  <td class="text-center "><input type="text" name="banner_image[' + language_id + '][' + image_row + '][title]" value="" placeholder="{{ entry_title }}" class="form-control" /></td>';
    // title
	html += '  <td class="text-center" style="width: 30%;"><input type="text" name="banner_image[' + language_id + '][' + image_row + '][link]" value="" placeholder="{{ entry_link }}" class="form-control" /></td>';
	//link
	html += '  <td class="text-center "><a href="" id="thumb-image' + image_row + '" data-toggle="image" class="img-thumbnail"><img src="{{ placeholder }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a><input type="hidden" name="banner_image[' + language_id + '][' + image_row + '][image]" value="" id="input-image' + image_row + '" /></td>';
	// image
	html += '  <td class="text-center" style="width: 10%;"><input type="text" name="banner_image[' + language_id + '][' + image_row + '][sort_order]" value="" placeholder="{{ entry_sort_order }}" class="form-control" /></td>';
	//status
  html+=     '  <td class="text-center " style="width: 10%;">' ;
  html+=     '        <select   name="banner_image['+language_id+']['+image_row+'][status]"  placeholder="{{ entry_status }}" class="form-control" >' ;
  html+=     '          <option value="1"  selected >{{ text_enabled }}</option>' ;
  html+=     '          <option value="0" >{{ text_disabled }}</option>' ;
  html+=     '        </select>' ;
  html+=     '    </td>';
  //button
	html += '  <td class="text-center">';
    html += '<input type="hidden"  name="banner_image['+language_id+']['+image_row+'][banner_image_id]" />';
  html += '<button type="button" onclick="$(\'#image-row' + image_row  + ', .tooltip\').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
	html += '</tr>';
	$('#images' + language_id + ' tbody').append(html);
	
	image_row++;
}

function removeBanner(obj) {
    if(confirm('Do you confirm deletion?')){
      var id = $(obj).prev().val();
      $.ajax({
        url: "{{ remove_url }}&banner_image_id=" + id,
        type: 'get',
        success: function (json) {
          location=location
        },
        error: function (xhr, ajaxOptions, thrownError) {
          alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
        }
      })
    }
}
//--></script> 
  <script type="text/javascript"><!--
$('#language a:first').tab('show');
//--></script> 
</div>
{{ footer }} 
{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <h1>{{ heading_title}}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning}}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {% if success %}
            <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success}}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-list"></i> {{ heading_title}}</h3>
            </div>
            <div class="panel-body">
                <div class="well">
                    <div class="row">
                        <div class="col-sm-13">
                            <div class="form-group">
                                <label class="control-label" for="button-upload">
                                    <span data-toggle="tooltip"
                                          title="{{ text_prompt }}">{{ column_name}}<i class="giga icon-V10-wenhaotishi"></i></span></label>
                                <div class='input-group'>
                                    <input type="text" name="filter_name" value="{{ filter_name}}" placeholder="{{ column_name}}" id="input-name" class="form-control" />
                                    <span class="input-group-addon">{#<span class="fa fa-angle-double-down"></span>#}</span>
                                    <button type="button" onclick="createInvitationCode();" class="btn btn-primary pull-left">{#<i class="fa fa-search"></i>#} {{ button_create}}</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <h3 style="text-align:center; font-weight: bold;">{{ invitationcode }}</h3>
                    <div class="text-danger">{{ error_message }}</div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript"><!--
        function createInvitationCode() {
            url = "index.php?route=invitationcode/create_invitationcode&user_token={{ user_token}}&customerName="+$("#input-name").val();

            location = url;
        }
        //--></script>
    <script type="text/javascript">

        $('input[name=\'filter_name\']').autocomplete({
            delay: 0,
            source: function(request, response) {
                $.ajax({
                    url: 'index.php?route=invitationcode/create_invitationcode/autocomplete&user_token={{ user_token}}&filter_name=' +  encodeURIComponent(request)+'&filter_view=' +  jQuery('#view_all').val(),
                    dataType: 'json',
                    success: function(json) {
                        response($.map(json, function(item) {
                            return {
                                label: item.name,
                                value: item.id
                            }
                        }));
                    }
                });
            },
            'select': function(item) {
                $('input[name=\'filter_name\']').val(item['label']);
            }
        });

        $('input[name=\'filter_email\']').autocomplete({
            delay: 0,
            source: function(request, response) {
                $.ajax({
                    url: 'index.php?route=customerpartner/partner/autocomplete&user_token={{ user_token}}&filter_email=' +  encodeURIComponent(request)+'&filter_view=' +  jQuery('#view_all').val(),
                    dataType: 'json',
                    success: function(json) {
                        response($.map(json, function(item) {
                            return {
                                label: item.email,
                                value: item.id
                            }
                        }));
                    }
                });
            },
            'select': function(item) {
                $('input[name=\'filter_email\']').val(item['label']);
            }
        });
    </script>
    {{ footer}}
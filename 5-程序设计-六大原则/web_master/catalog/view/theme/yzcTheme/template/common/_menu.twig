      let url = $(this).attr('url');
      window.location.href = url;
    });

    //解决首页缩小浏览器时右侧出现空白
    var isIndex = '{{ is_home }}'
    if (isIndex === '1'){
      $(window).resize(function () {
        var clientWidth = $(document).width()
        if (clientWidth < 1320) {
          $('html').addClass('overflow-auto')
        } else {
          $('html').removeClass('overflow-auto')
        }
      })
    }

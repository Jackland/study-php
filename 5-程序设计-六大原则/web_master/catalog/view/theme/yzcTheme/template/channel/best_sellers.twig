{{ cssOrigin(['/catalog/view/javascript/layui/css/layui.css']) }}
{{ css(['css/common/common.css']) }}
{{ css(['css/buyer/channel/index.css']) }}
{# 公共组件做特殊化处理 #}
{# best-sellers #}
<div class="best-sellers pb-20">
  <div class="section">
    <h1></h1>
  </div>
  {% from 'yzcTheme/template/extension/module/featured_components/no_records.twig' import no_record %}
  {{ no_record(storeInfo.data|length, productsInfo.data|length ,categories.0.amount) }}
  {% if storeInfo.data|length == 0 and productsInfo.data|length ==0 and categories.0.amount == 0 %}
  <div class="main">
  {% else %}
  <div class="main min-height332">
  {% endif %}
    <div class="center-module">
      <div class="heightCoop p10-t">
        <!--Featured Stroes-->
        {% if storeInfo.data %}
          <div class="center-module-content">
            <div class="pos-rela p20-t">
              {% if storeInfo.is_end  == 0 %}
                <div class="channel-module-title">
                  <a href="{{ url('product/channel/getChannelData',{'type':'feature_stores' }) }}" target="_blank"
                     class="text-color-no-hover"
                  >
                    {{ __('Featured Stores', {}, 'product/channel') }}&nbsp;
                  </a>
                </div>
                <a href="{{ url('product/channel/getChannelData',{'type':'feature_stores' }) }}" target="_blank"
                   class="view-more">View More&nbsp;>&nbsp;</a>
              {% else %}
                <div class="channel-module-title">{{ __('Featured Stores', {}, 'product/channel') }}</div>
              {% endif %}
            </div>
            <div class="channel-module-details">
              {# #16460店铺公共模块 #}
              {% for data in storeInfo.data %}
                {% include 'yzcTheme/template/extension/module/featured_components/common_store_module.twig' %}
              {% endfor %}
            </div>
          </div>
        {% endif %}
        <!--END-->
        <!--Top Seller-->
        {% if productsInfo.data %}
          <div class="center-module-content">
            <div class="pos-rela p20-t">
              <div class="channel-module-title">{{ __('销售增长趋势Top 10', {}, 'product/channel') }}</div>
            </div>
            <div class="channel-module-details">
              {% for product in productsInfo.data %}
                <div class="item">
                  <div class="item-content"> {% include 'giga/template/_parts/home.twig' %}</div>
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}
        <!--END-->
      </div>
      {# 16460分类导航 #}
      {% if categories[0]['amount'] > 0 %}
        {% include 'yzcTheme/template/extension/module/featured_components/category_nav.twig' %}
        <!--END-->
        <!--search content-->
        <div class="search-content center-module-content m10-t">
          <div id="data-load" class="channel-module-details" page="1" data-loadsuccess="true">

          </div>
        </div>
        <!--END-->
        <!-- <div class="load"></div> -->
        <input type="hidden" id="url" value="{{ url('product/channel/getChannelSynData',{'type':'best_sellers'}) }}">
        <script src="/public/static/channel/channel.js"></script>
      {% endif %}
    </div>
  </div>
</div>
{{ footer }}
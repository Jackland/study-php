{{ cssOrigin(['/catalog/view/javascript/layui/css/layui.css']) }}
{{ css(['css/common/common.css']) }}
{{ css(['css/buyer/channel/index.css']) }}
<style>
  /*公共组件特殊化处理*/
  .comming-soon .tag-group, .qty-group {
    display: none;
  }
  .comming-soon .estimated-date, .comming-soon .estimated-qty {
    display: block;
    min-height: 17px;
  }
  .comming-soon .m04-t{
    margin-top: 4px;
  }

  .comming-soon .min-price-height {
    min-height: auto;
  }

  .comming-soon .new-arrivals-qty {
    display: none;
  }
</style>
{# arriving-soon #}
<div class="comming-soon pb-20">
  <div class="section">
    <h1></h1>
  </div>
  {% from 'yzcTheme/template/extension/module/featured_components/no_records.twig' import no_record %}
  {{ no_record(storeInfo.data|length, productsInfo.data|length ,categories.0.amount ) }}
  {# 固定一个最小高度 #}
  {% if storeInfo.data|length == 0 and productsInfo.data|length == 0 and categories.0.amount == 0 %}
  <div class="main">
  {% else %}
  <div class="main min-height332">
  {% endif%}
    <div class="center-module">
      <div class="heightCoop p10-t">
      {% if storeInfo.data|length > 0 %}
          <div class="center-module-content">
            <div class="pos-rela p20-t">
              <div class="channel-module-title">Brand New Products</div>
            </div>
            <div class="channel-module-details">
              {# 16460 first arrivals #}
              {% for product in storeInfo.data %}
                <div class="item">
                  <div class="item-content"> {% include 'giga/template/_parts/home.twig' %}</div>
                </div>
              {% endfor %}
            </div>
          </div>
      {% endif %}
      {% if productsInfo.data|length > 0 %}
        <div class="center-module-content feature-goods">
          <div class="pos-rela p20-t">
            <div class="channel-module-title">Future Goods</div>
          </div>
          <div class="channel-module-details">
            {# future goods #}
            {% for product in productsInfo.data %}
              {% set product = product|merge({'min_price':product.futures_price_min,'max_price':product.futures_price_max,'min_price_show':product.futures_price_min_show,'max_price_show':product.futures_price_max_show}) %}
              <div class="item">
                <div class="item-content"> {% include 'giga/template/_parts/home.twig' %}</div>
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>
      {# 16460分类导航 #}
      {% if categories.0.amount > 0 %}
        {% include 'yzcTheme/template/extension/module/featured_components/category_nav.twig' %}
        <!--END-->
        <!--search content-->
        <div class="search-content center-module-content m10-t">
          <div id="data-load" class="channel-module-details" page="1" data-loadsuccess="true">

          </div>
        </div>
        <!--END-->
        <input type="hidden" id="url" value="{{ url('product/channel/getChannelSynData',{'type':'coming_soon'}) }}">
        <script src="/public/static/channel/channel.js"></script>
      {% endif %}
    </div>
  </div>
</div>
{{ footer }}
{% if reviews %}
  {% for review in reviews %}
    <table class="table table-striped table-bordered">
      <tr>
        {#14052【需求优化】产品评论功能隐藏Buyer昵称和编码#}
        {#<td style="width: 50%;"><strong>{{ review.author }}</strong></td>#}
        {#<td class="text-right">{{ review.date_added }}</td>#}
        <td class="text-left"><strong>{{ review.date_added }}</strong></td>
      </tr>
      <tr>
        <td colspan="2"><p style="word-break: break-all">Buyer Review: &nbsp; &nbsp; {{ review.text }}</p>
          {% for file in review.files %}
            <img src="{{ file }}" width="70px" height="70px" style="margin-left: 10px">
          {% endfor %}
          </br>
          {% for i in 1..5 %}
            {% if review.rating < i %}
              <span class="fa fa-stack" style="margin-top: 2%; color: #FA6400;">
                <i class="fa fa-star-o fa-stack-2x"></i>
              </span>
            {% else %}
              <span class="fa fa-stack" style="margin-top: 2%; color: #FA6400;">
                <i class="fa fa-star fa-stack-2x"></i>
                <i class="fa fa-star-o fa-stack-2x"></i>
              </span>
            {% endif %}
          {% endfor %}
          {% if review.seller_review %}
            <p style="word-break: break-all">Seller Review: &nbsp; &nbsp; {{ review.seller_review }}</p>
          {% endif %}
        </td>
      </tr>
    </table>
  {% endfor %}
  <div class="text-right">{{ pagination }}</div>
{% else %}
  <p>{{ text_no_reviews }}</p>
{% endif %}

<script>
  $('.dropdown-menu .dropdown-item').on('click', function (e) {
    var _this = $(this);
    var subHref = _this.data('href');
    e.preventDefault();
    block.blockUI();
    $('#review').load(subHref, function () {
      block.unBlockUI();
    });
  })

</script>
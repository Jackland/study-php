<script type="text/javascript">
  //check out 点击事件
  $('#table-checkout').on('click',function () {
    $('#table-checkout').attr("disabled",true);
    let delivery_type = '{{ delivery_type }}';
    let cartId = new Array();
    $('*[name="select_cart_'+delivery_type+'"]:checked').each(function (i) {
      cartId[i] = $(this).val();
    });
    cart_id_str = cartId.join(',');
    $.ajax({
      url: "{{ updateInnerAutoBuyCartUrl }}",
      async: false,
      type: 'POST',
      dataType: "json",
      data: {delivery_type:delivery_type,cart_id_str:cart_id_str},
      success: function (json, textStatus, jqXHR) {
        if (json.code && json.data.cart_id_str){
          location.href = '{{ preOrderUrl }}' + '&delivery_type=' + delivery_type + '&cart_id_str=' + json.data.cart_id_str;
        }else {
          location.href = 'index.php?route=checkout/cart';
        }
      }
    });
  });
  //关闭弹窗 删除checkout按钮的disabled属性
  $('.close').on('click',function () {
    $('button[name="btn_checkout"]').attr("disabled", false);
    $('input.allcheck').attr("disabled", false);
    $('button.batch-del').css('display','inline-block');
  })
</script>
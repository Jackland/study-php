                                                            {#                              {% endif %}#}
                                                            {#                            </div>#}

                                                        </div>

                                                        <div class="store-group-button">
                                                            <div class="store-group">
                                                                <div class="store to_store_home"
                                                                     qa_rate="{{ product['qa_rate'] }}"
                                                                     seller_id="{{ product['seller_id'] }}"
                                                                     return_approval_rate="{{ product['return_approval_rate'] }}"
                                                                     sku="{{ product['sku'] }}"
                                                                     onclick="goToSellerStore({{ product['seller_id'] }})"
                                                                >
                                                                    <span class="store-home-name">{{ product['screenname'] }}&nbsp;
                                                                        <i class="fa fa-angle-down" aria-hidden="true"></i>
                                                                    </span>
                                                                    <div class="store-pop">
                                                                        <!--100548-->
                                                                        <div class="text">
                                                                            Return
                                                                            Rate: {{ product['store_return_rate_mark'] }}
                                                                            {% if product['store_return_rate_mark'] == 'N/A' %}
                                                                                <i class="giga icon-V10-wenhaotishi"
                                                                                   data-toggle="tooltip"
                                                                                   title="The volume of total units sold is not enough for judging return rate."></i>
                                                                            {% endif %}
                                                                        </div>
                                                                        <!--100548-->
                                                                        <div class="text">
                                                                            Return Approval Rate:
                                                                            {% if product['return_approval_rate'] == 0 %}
                                                                                N/A <i class="giga icon-V10-wenhaotishi"
                                                                                       data-toggle="tooltip"
                                                                                       title="No RMA records."></i>
                                                                            {% elseif product['return_approval_rate'] > 90 %}
                                                                                High
                                                                            {% elseif product['return_approval_rate'] > 60 %}
                                                                                Moderate
                                                                            {% else %}
                                                                                Low
                                                                            {% endif %}
                                                                        </div>
                                                                        <!--100548-->
                                                                        {% if product['store_response_rate_mark'] %}
                                                                            <div class="text">
                                                                                Response
                                                                                Rate: {{ product['store_response_rate_mark'] }}
                                                                            </div>
                                                                        {% endif %}
                                                                        <!--100548-->
                                                                    </div>
                                                                </div>
                                                                <a class="chat" style="display: none;"><i
                                                                            class="giga icon-chat-inactive"></i></a>
                                                                <a class="email" target="_blank"
                                                                   href="index.php?route=message/seller/addMessage&receiver_id={{ product['seller_id'] }}&item_code={{ product['sku'] }}"><i
                                                                            class="giga icon-email-grey {% if product['seller_status'] == 0 %}status_no{% endif %}"
                                                                            data-toggle="tooltip" title="Message Seller"
                                                                            aria-hidden="true">
                                                                    </i></a>
                                                            </div>

                                                        </div>

                                                    </div>

                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                                {#              去除分页器#}
                                {#              {% if data.products|length > 4 %}#}
                                {#              <div class="swiper-pagination swiper-pagination-outside-bottom" id="payment-pagination"></div>#}
                                {#              {% endif %}#}
                            </div>
                        {% endif %}


                    </div>
                </div>
            </div>
        </div>

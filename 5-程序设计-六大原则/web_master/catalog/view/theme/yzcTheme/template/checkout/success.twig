                                                                               title="{{ button_wishlist_remove }}"
                                                                               onclick="wishlist.unavailable('{{ product.product_id }}', this);">
                                                                                <i class="giga fa-heart wishlist"></i>
                                                                            </a>
                                                                        {% else %}
                                                                            <a type="button" data-toggle="tooltip"
                                                                               title="{{ button_wishlist_remove }}"
                                                                               onclick="wishlist.remove('{{ product.product_id }}', this, 'home');">
                                                                                <i class="giga fa-heart wishlist"></i>
                                                                            </a>

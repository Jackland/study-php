<script type="text/javascript">
    var feeToPayFlag = {{ feeToPayFlag ? 1 : 0 }};// 判断是否需要弹窗
    var paymentSwiper = new Swiper('#payment-recommended', {
        mode: 'horizontal',
        slidesPerView: 4,
        pagination: '#payment-pagination',
        nextButton: '#payment-next',
        prevButton: '#payment-prev',
        paginationClickable: true,
        spaceBetween: 20,
        autoplay: 5000,
        autoplayDisableOnInteraction: true,
        loop: true
    });
    //弹窗（新增）
    $(document).ready(function() {
      if (feeToPayFlag) {
        layer.open({
          title: 'Attention',
          skin: 'yzc_layer',
          btnAlign: 'c',
          area: 'auto',
          maxHeight: 260,
          content: 'Sales Order: <span class="order-num">' + '{{ feeToPayStr }}' + '</span> will not be processed for shipping because there are unpaid pending charges.  Please make the payment first.',
          btn: ['Make payment', 'Pay later'],
          btn1: function () {
            window.open("{{ url('account/customer_order', {'initFilter': '1','tabIndex':'1'}) }}");
          },
        });
      }
    });
    function goToSellerStore(sellerId) {
        window.open('index.php?route=customerpartner/profile&id=' + sellerId,"_blank")
    }
</script>

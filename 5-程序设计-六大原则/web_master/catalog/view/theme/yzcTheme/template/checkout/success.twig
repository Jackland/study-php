                                                                               onclick="wishlist.unavailable('{{ product.product_id }}', this);">
                                                                                <i class="giga fa-heart-o wishlist"></i>
                                                                            </a>
                                                                        {% else %}
                                                                            <a type="button" data-toggle="tooltip"
                                                                               title="{{ button_wishlist_add }}"
                                                                               onclick="wishlist.add('{{ product.product_id }}', this, 'home');">
                                                                                <i class="giga fa-heart-o wishlist"></i>
                                                                            </a>
                                                                        {% endif %}
                                                                    {% endif %}

                                                                    {#                                END 可卖、可见#}

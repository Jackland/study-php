{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
    {% endfor %}
  </ul>
  {% if (error_warning) %}
  <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
  {% endif %}
  {% if (success) %}
  <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
  {% endif %}
  <div class="row">{{ column_left }}
    {% if (column_left and column_right) %}
    {% set class = 'col-sm-6' %}
    {% elseif (column_left or column_right) %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h1>{{ heading_title }}</h1>
      <hr />
        <div class="well">
          <div class="row">
            <div class="col-sm-4">
              <div class="form-group">
                <label class="control-label" for="input-admin_oid">{{ text_admin_oid }}</label>
                <input type="text" name="filter_order" value="{{ filter_order }}" placeholder="{{ text_admin_oid }}" id="input-admin_oid" class="form-control" />
              </div>
              <div class="form-group">
                <label class="control-label" for="input-admin_adminstatus">{{ text_admin_adminstatus }}</label>
                <select name="filter_admin_status" id="input-admin_adminstatus" class="form-control">
                  <option value="*">  </option>
                  {% if (admin_status) %}
                  {% for admin_statuss in admin_status %}
                    <option value="{{ admin_statuss['id'] }}" {% if (filter_admin_status == admin_statuss['id']) %} {{ 'selected' }}{% endif %}>{{ admin_statuss['name'] }}</option>
                  {% endfor %}
                  {% endif %}
                </select>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <label class="control-label" for="input-admin_date">{{ text_admin_date }}</label>
                <div class='input-group'>
                  <input data-toggle="datetimepicker" type='text' name="filter_date" value="{{ filter_date }}" data-date-format="YYYY-MM-DD" placeholder="{{ text_admin_date }}" id="input-admin_date" class="form-control" />
                  <span class="input-group-addon"><span class="fa fa-calendar"></span>
                  </span>
                </div>
              </div>
            </div>

            <div class="col-sm-4">
              <div class="form-group">
                <label class="control-label" for="input-status">{{ text_status }}</label>
                <select name="filter_rma_status_id" id="input-status" class="form-control">
                  {% if (filter_rma_status_id) %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                  {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                </select>
              </div>
              <div class="pull-right">
                <button type="button" onclick="filter();" class="btn btn-primary">{{ button_filter }}</button>
                <button type="button" onclick="clrfilter();" class="btn btn-primary">{{ button_clrfilter }}</button>
              </div>
            </div>
          </div>
        </div>

        <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-filter">
          <div class="table-responsive">
            <table class="table table-hove">
            <thead>
              <tr>
              <th width="1" style="text-align: center;"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></th>

                <th class="text-left">
                  {% if (sort == 'wro.order_id') %}
                    <a href="{{ sort_order }}" class="{{ order|lower }}">{{ text_admin_oid }}</a>
                  {% else %}
                    <a href="{{ sort_order }}" > {{ text_admin_oid }} </a>
                  {% endif %}
                </th>

                <th class="text-left">
                  {% if (sort == 'c.firstname') %}
                    <a href="{{ sort_name }}" class="{{ order|lower }}">{{ text_admin_cname }}</a>
                  {% else %}
                    <a href="{{ sort_name }}" > {{ text_admin_cname }} </a>
                  {% endif %}
                </th>
                <th class="text-left">
                  {% if (sort == 'wro.id') %}
                    <a href="{{ sort_product }}" class="{{ order|lower }}">{{ text_admin_product }}</a>
                  {% else %}
                    <a href="{{ sort_product }}" > {{ text_admin_product }} </a>
                  {% endif %}
                </th>
                <th class="text-left">{{ text_admin_return }}</th>

                <th class="text-left">
                {% if (sort == 'wrr.id') %}
                  <a href="{{ sort_reason }}" class="{{ order|lower }}">{{ text_admin_reason }}</a>
                {% else %}
                  <a href="{{ sort_reason }}" > {{ text_admin_reason }} </a>
                {% endif %}
                </th>
                <th class="text-left">
                  {{ text_rma_status }}
                </th>

                <th class="text-left">
                {% if (sort == 'wro.date') %}
                  <a href="{{ sort_date }}" class="{{ order|lower }}">{{ text_admin_date }}</a>
                {% else %}
                  <a href="{{ sort_date }}" > {{ text_admin_date }} </a>
                {% endif %}
                </th>

                <th></th>
              </tr>
            </thead>
            <tbody>
              {% if (result_rmaadmin) %}
                {% for result_rmaadmins in result_rmaadmin %}
                <tr>
                  <td style="text-align: center;">{% if (result_rmaadmins['selected']) %}
                    <input type="checkbox" name="selected[]" value="{{ result_rmaadmins['id'] }}" checked="checked" />
                    {% else %}
                    <input type="checkbox" name="selected[]" value="{{ result_rmaadmins['id'] }}" />
                    {% endif %}
                  </td>
                  <td class="text-left">{{ result_rmaadmins['oid']|capitalize }}</td>
                  <td class="text-left">{{ result_rmaadmins['name']|capitalize }}</td>

                  <td class="text-left">{{ result_rmaadmins['product']|capitalize }}</td>
                  <td class="text-left">{{ result_rmaadmins['quantity'] }}</td>
                  <td class="text-left">{{ result_rmaadmins['reason']|capitalize }}</td>
                  <td class="text-left" style="color:{{ result_rmaadmins['color'] }};font-weight:bold;">{{ result_rmaadmins['rma_status']|capitalize }}</td>
                  <td class="text-left">{{ result_rmaadmins['date']|capitalize }}</td>

                  <td class="text-center">
                    {% for action in result_rmaadmins['action'] %}
                    <a href="{{ action['href'] }}" class="btn btn-info" data-toggle="tooltip" title="{{ action['text'] }}"><i class="fa fa-eye"></i></a>
                    {% endfor %}
                  </td>
                </tr>
                {% endfor %}
              {% else %}
              <tr>
                <td class="text-center" colspan="12">{{ text_no_recored }}</td>
              </tr>
              {% endif %}
            </tbody>
          </table>
          </div>
        </form>
        <div class="row">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
          <div class="col-sm-6 text-right">{{ results }}</div>
        </div>
        {{ content_bottom }}</div>
      {{ column_right }}</div>
  </div>
{{ footer }}

<script type="text/javascript"><!--
$('[data-toggle="datetimepicker"]').datepicker({
  autoHide: true,
  format:"YYYY-MM-DD"
});

function clrfilter() {
  location = 'index.php?route=account/customerpartner/rma/wk_rma_admin';
}

function filter() {
  url = 'index.php?route=account/customerpartner/rma/wk_rma_admin';

  var filter_order = $('input[name=\'filter_order\']').val();

  if (filter_order) {
    url += '&filter_order=' + encodeURIComponent(filter_order);
  }

  var filter_rma_status = $('select[name=\'filter_rma_status\']').val();

  if (filter_rma_status != '*') {
    url += '&filter_rma_status=' + encodeURIComponent(filter_rma_status);
  }

  var filter_admin_status = $('select[name=\'filter_admin_status\']').val();

  if (filter_admin_status != '*') {
    url += '&filter_admin_status=' + encodeURIComponent(filter_admin_status);
  }

  var filter_date = $('input[name=\'filter_date\']').val();

  if (filter_date) {
    url += '&filter_date=' + encodeURIComponent(filter_date);
  }

  var filter_rma_status_id = $('select[name=\'filter_rma_status_id\']').val();

  if (filter_rma_status_id) {
    url += '&filter_rma_status_id=' + encodeURIComponent(filter_rma_status_id);
  }

  location = url;
}
$('input[name=\'filter_rma_customer\']').autocomplete({
	'source': function(request, response) {
		$.ajax({
			url: 'index.php?route={{ customer_link }}/autocomplete&filter_name=' +  encodeURIComponent(request),
			dataType: 'json',
			success: function(json) {
				response($.map(json, function(item) {
					return {
						label: item['name'] + '(' + item['email'] + ')',
						value: item['customer_id'],
            email: item['email']
					}
				}));
			}
		});
	},
	'select': function(item) {
		$('input[name=\'filter_rma_customer\']').val(item['label']);
    location = 'index.php?route=account/customerpartner/rma/wk_customer_orders&customer_id='+encodeURIComponent(item['value'])+'&customer_email=' + encodeURIComponent(item['email']);
	}
});
//--></script>

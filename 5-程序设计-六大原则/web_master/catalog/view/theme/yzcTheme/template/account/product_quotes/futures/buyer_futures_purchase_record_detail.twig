<style>
  .subscript {
    position: absolute;
    right: 0;
    top: 0;
    color: #fff;
    padding: 0 8px;
    /*width: 190px;*/
    height: 40px;
    line-height: 40px;
    text-align: center;
    border-radius: 4px;
    background-color: {{ record.paid_color }};
  }

  .delivery-list-name,
  .delivery-list-detail {
    height: auto;
    /*line-height: 40px;*/
    border-bottom: 1px solid #eee;
    display: flex;
    align-items: center;
    padding: 8px 0;
  }
  .delivery-list-detail{
    padding: 15px 0;
  }

  .dropshipping-service {
    box-shadow: 0 0 5px #aaa;
    background-color: #fff;
    position: absolute;
    width: 250px;
    padding: 10px;

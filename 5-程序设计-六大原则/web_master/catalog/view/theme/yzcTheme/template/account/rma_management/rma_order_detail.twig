<script>
  var isNewApplyRma = {{ isNewApplyRma ? 'true' : 'false' }};
  $(".white-sPre").each(function () {
    var text = $(this).text().trim();
    $(this).text(text);
  })
    $('[data-toggle="tooltip_custom"]').tooltip({
        container: '#my_own_tip',
        template: '<div class="tooltip" role="tooltip"><div class="tooltip-arrow"></div><div class="tooltip-inner" style="text-align: left;min-width: 300px;"></div></div>',
    });
    $(function () {
        $('#thumbnails_1').magnificPopup({
            type: 'image',
            delegate: 'a',
            gallery: {
                enabled: true
            }
        });
        // 倒计时显示
        let startDate = new Date('{{ date }}').getTime();
        let endDate = new Date('{{ rmaOrderInfo.created_time }}').getTime();
        if (isNewApplyRma){
          endDate += 7 * 24 * 60 * 60 * 1000;
        } else {
          endDate += 14 * 24 * 60 * 60 * 1000;
        }
        if (startDate < endDate) {
            TimeDown('count-down', startDate, endDate)
        }
    });

    function TimeDown(classname, startDate, endDate) {
        //相差的总秒数
        let totalSeconds = parseInt((endDate - startDate) / 1000);
        //天数
        let days = Math.floor(totalSeconds / (60 * 60 * 24));
        //取模（余数）
        let modulo = totalSeconds % (60 * 60 * 24);
        //小时数
        let hours = Math.floor(modulo / (60 * 60));
        modulo = modulo % (60 * 60);
        //分钟
        let minutes = Math.floor(modulo / 60);
        //秒
        let seconds = modulo % 60;

        let str = days + "D</br>" + hours + "H" + minutes + "M" + seconds + "S";
        if (seconds < 0) {
            str = '-';
        }
        //输出到页面
        document.getElementsByClassName(classname)[0].innerHTML = str;
        //延迟一秒执行自己
        setTimeout(function () {
            TimeDown(classname, startDate + 1000, endDate);
        }, 1000)
    }

    function changeIcon() {
        if ($("#icon_down1").css('display') == 'none') {
            $("#icon_down1").css('display', 'block');
            $("#icon_up1").css('display', 'none');
        } else {
            $("#icon_up1").css('display', 'block');
            $("#icon_down1").css('display', 'none');
        }
    }

</script>
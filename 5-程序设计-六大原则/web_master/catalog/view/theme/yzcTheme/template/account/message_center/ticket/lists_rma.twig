<script type="text/javascript" src="catalog/view/javascript/bootstrap/js/bootstrap-paginator.min.js"></script>
<script src="catalog/view/javascript/jquery/magnific/jquery.magnific-popup.min.js" type="text/javascript"></script>
<link href="catalog/view/javascript/jquery/magnific/magnific-popup.css" type="text/css" rel="stylesheet"/>

<div role="tabpanel" class="msgcent-mymessage">
{{ send_page }}
  <div id="leave">
    <div class="ticket-lists-right msgcent msg-form__container msg-pt-0">
        <div class="oris-row mb-24"> 
            <form class="ticket-lists-right-form">
                <div class="oris-ingroup">
                    <input id="wdRma" type="text" class="input-search-rma oris-input mr-10" placeholder="Search Request ID / RMA ID" value="{{ wd }}">
                    <button id="btnSearchRma" type="button" class="oris-button mr-10" onclick="filterRma(this)">Filter</button>
                    <div class="oris-button oris-button-default submit-ticket-right__message submit-ticket-right-btn">Submit a Request</div>
                </div>
            </form>
        </div>
        <div class="msg-ticket__container mb-24">
        {% for item in left_lists %}
            <div class="msg-ticket__item {% if right==item.value %} active {% endif %}">
                <a class="tickek-right-type-rma" href="javascript:void(0);" value="&right={{ item.value }}">
                    {{ item.name }}
                    <span class="style"> ({{ item.count }})</span>
                    {# {% if item.isNoread  %}
                        <span class="header-badge-dot"></span>
                    {% endif %} #}
                </a>
            </div>
        {% endfor %}
        </div>
        <table class="main table-hover oris-table">
            <thead>
            <tr>
                <th class="text-left">{{ column_ticket_id_long }}</th>
                <th class="text-left">{{ column_ticket_type }}</th>
                <th class="text-left">{{ column_rma_id }}</th>
                <th class="text-left">
                    {% if sort=='date_modified' %}
                        <a href="javascript:void(0);" value="{{ sort_date_modified }}" class="ticketClickSortRma {{ order|lower }}">{{ column_date_modified }}</a>
                    {% else %}
                        <a href="javascript:void(0);" value="{{ sort_date_modified }}" class="ticketClickSortRma">{{ column_date_modified }}</a>
                    {% endif %}
                </th>
                <th class="text-left">
                    {% if sort=='customer_is_read' %}
                        <a href="javascript:void(0);" value="{{ sort_customer_is_read }}" class="ticketClickSortRma {{ order|lower }}">{{ column_status }}</a>
                    {% else %}
                        <a href="javascript:void(0);" value="{{ sort_customer_is_read }}" class="ticketClickSortRma">{{ column_status }}</a>
                    {% endif %}
                </th>
                <th class="text-center">{{ column_action }}</th>
            </tr>
            </thead>
            <tbody>
            {% if lists %}
                {% for item in lists %}
                    <tr>
                        <td class="text-left">{{ item.ticket_id }}</td>
                        <td class="text-left">{{ item.ticket_type_name }}</td>
                        <td class="text-left"><a href="{{ url('account/rma_order_detail', {'rma_id':item.rma_key}) }}">{{ item.rma_id }}</a></td>
                        <td class="text-left">{{ item.last_modified_time_format }}</td>
                        <td class="text-left">
                            {% if item.customer_is_read == 0 %}
                                <span class="glyphicon glyphicon-exclamation-sign hot-color"></span>
                            {% endif %}
                            {{ item.status_name }}
                        </td>
                        <td class="text-center">
                          <div class="action-group">
                            <a href="{{ url('account/message_center/ticket/view', {'id':item.id, 'type':submit_ticket_for}) }}" data-toggle="tooltip" title="{{ button_view }}"
                               class="btn-text pull-center"><i class="giga icon-chakan-01 msg-icon-chakan"></i></a>
                          </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% else %}
                </tbody>
            </table>
            <div class="msg-empty">
                <div class="msg-empty-container">
                <div class="msg-empty-icon">
                    <img src="{{ asset("image/icons/empty.png") }}"></img>
                </div>
                <div class="msg-empty-title">No Records Found !</div>
                </div>
            </div>
            {% endif %}

        <div class="oris-row oris-pagination">
            <ul id="bos_pagination_ticket_rma"></ul>
        </div>
    </div>
  </div>
</div>


<textarea id="categoryRootidJsonRma" style="display: none;">{{ categoryRootid }}</textarea>
<textarea id="culsterCountJsonRma" style="display: none;">{{ culsterCountJson }}</textarea>

<script>
    $(function () {
        block.unBlockUI();
        initTicketRma();
    });
    globalSendPageFuns.initSelect =  function() {
        $("#submit_ticket_for__message").selectpicker('val', 1).trigger('change');
    };
    function initTicketRma() {
        //分页链接
        paginationTicketRma();
        upTicketTabCountRma('Rma');
        globalSendPageFuns.initSelect();
    }

    $(document).ready(function () {
        $(".tickek-right-type-rma").click(function () {
            let that = this;
            block.blockUI();

            $("#wdRma").val("");

            $(".tickek-right-type-rma").parent().each(function (index, Ele) {
                $(Ele).removeClass('li-active');
            });
            $(that).parent().addClass('li-active');

            let url = getUrlForTicketRma();
            //$('#show-lists-rma').load(url);
            $('#tab-content').load(url);
        });

        $(".ticketClickSortRma").click(function(){
            let that = this;
            block.blockUI();

            let url = getUrlForTicketRma();
            let thatVal = $(that).attr('value');
            let thatOrder = $(that).hasClass("asc")?'asc':'desc';

            $(".ticketClickSortRma").removeClass('asc').removeClass('desc');
            $(that).addClass(thatOrder == 'asc' ? 'asc' : 'desc');

            url += thatVal;

            // $('#show-lists-rma').load(url);
            $('#tab-content').load(url);
        });

        $(".input-search-rma").keydown(function (e) {
          if (e.keyCode == 13) {
            filterRma($('#btnSearchRma'))
            return false;
          }
        });
    });


    function upTicketTabCountRma(label){

<script type="text/javascript" src="catalog/view/javascript/bootstrap/js/bootstrap-paginator.min.js"></script>
<script src="catalog/view/javascript/jquery/magnific/jquery.magnific-popup.min.js" type="text/javascript"></script>
<link href="catalog/view/javascript/jquery/magnific/magnific-popup.css" type="text/css" rel="stylesheet"/>
<style>
    .flag-margin-order{
        color: #FF784E;
        margin-left: 5px;
    }
    .return-style{
        background-color: #d5d5d5;
        cursor: no-drop;
    }
    .return-style:hover{
        background-color: #d5d5d5;
        cursor: no-drop;
    }
    .content-title{
      color:#183464;
    }
</style>

<div role="tabpanel" class="tab-pane active">
  <div class="bg-white p-2">
    <div class="row">


        <div id="content" class="col-sm-12">
            <h2 class="content-title">{{ text_order }}&nbsp;<i class="giga icon-margin" style="color: darkorange;" data-toggle="tooltip" title="Margin"></i></h2>
            <div class="tab-content" style="border: 0px #eee solid;float: left;width: 100%;">
              <div class="info-wrapper mb-4 mt-2">
                <div class="row">
                  <div class="col-md-2">
                    <span><i class="giga icon-summary-po-id"></i></span>
                    <span class="title">{{ text_order_id }}</span>
                    <span class="value">
                      {% if order_link %}
                        <a href="{{ order_link }}">
                        {{ order_id }}
                          {% if order_id %}&nbsp;<i class="giga icon-table-link" style="font-size: 16px;"></i>{% endif %}
                      </a>
                      {% else %}
                        {{ order_id }}
                      {% endif %}
                    </span>
                  </div>
                  <div class="col-md-2">
                    <span><i class="giga icon-summary-status"></i></span>
                    <span class="title">{{ text_order_status }}</span>
                    <span class="value">{{ order_status }}</span>
                  </div>
                  <div class="col-md-2">
                    <span><i class="giga icon-summary-day"></i></span>
                    <span class="title">{{ text_date_added }}</span>
                    <span class="value">{{ date_added }}</span>
                  </div>
                  <div class="col-md-2">
                    <span><i class="giga icon-summary-sransaction-status"></i></span>
                    <span class="title">{{ text_transcation_status }}</span>
                    <span class="value">
                      {% if has_order %}
                        Paid
                      {% endif %}
                    </span>
                  </div>
                  <div class="col-md-2">
                    <span><i class="giga icon-summary-payment"></i></span>
                    <span class="title">{{ text_payment_method }}</span>
                    <span class="value">{{ payment_method }}</span>
                  </div>
                  <div class="col-md-2">
                    <span><i class="giga icon-summary-balance"></i></span>
                    <span class="title">Line Of Credit<br>(Use Balance)</span>
                    <span class="value">{{ balance }}</span>
                  </div>
                </div>
              </div>

              {% if has_order %}
                <div class="" style="float: left;width: 100%;border-top:1px #eee solid;margin-bottom: 10px; ">
                    <h2 style='margin-top: 20px;' class="content-title">{{ text_item_list }}</h2>
                    <table class="table table-hover" style="margin: 0 auto;">
                        <thead>
                        <tr>
                            <th class="text-center"> Item Code</th>
                            <th class="text-center"> Product Name</th>
                            <th class="text-center"> Store Name</th>
                            <th class="text-center"> Qty</th>
                            <th class="text-center"> Unit Price</th>
                            {#{% if country_id == 222 or country_id == 81 %}#}
                                {#<th class="text-center"> Service Fee</th>#}
                            {#{% endif %}#}
                            {#{%  if country_id == 223  %}#}
                                {#日本不显示此列#}
                                {#<th class="text-center"> Discounted amount <br/> per unit</th>#}
                            {#{% endif %}#}
                            <th class="text-center"> Total Price</th>
                            <th class="text-center"> Transaction Fee</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for product in products %}
                            <tr>
                                <td class="text-center">
                                  {% if product.margin_sku %}
                                    {{ product.margin_sku }}
                                  {% else %}
                                    {{ product.sku }}
                                  {% endif %}
                                    {% for tagDetail in product.tag %}
                                        {{ tagDetail }}
                                    {% endfor %}
                                </td>
                                <td class="text-left" style="width: 50%">
                                  <a href="index.php?route=product/product&product_id={{ product.product_id }}">
                                    {% if product.margin_sku %}
                                      {{ product.sku }}<br>
                                    {% endif %}
                                    {{ product.name }}
                                    <i class="giga icon-table-link"></i>
                                  </a>
                                </td>
                                <td class="text-center">
                                  {% if product.margin_seller_name %}
                                    <a href="{{ product.margin_seller_link }}">{{ product.margin_seller_name }}
                                    {% if product.margin_seller_name %}
                                      <i class="giga icon-table-link"></i>
                                    {% endif %}</a>
                                  {% else %}
                                    <a href="index.php?route=customerpartner/profile&id={{ product.customer_id }}">{{ product.customerName }}
                                    {% if product.customerName %}
                                      <i class="giga icon-table-link"></i>
                                    {% endif %}</a>
                                  {% endif %}
                                </td>
                                <td class="text-center text-price">{{ product.quantity }}</td>
                                <td class="text-center text-price">
                                   {# {% if country_id == 222 or country_id == 81 %}
                                        <i class="giga icon-vat"></i>
                                    {% endif %}#}
                                    {{ product.price }}
                                </td>
                                {#{% if country_id == 222 or country_id == 81 %}#}
                                    {#<td class="text-center">{{ product.service_price }} </td>#}
                                {#{% endif %}#}
                                {#{%  if country_id == 223  %}#}
                                    {#日本不显示此列#}
                                    {#<td class="text-center">#}
                                        {#{% if product.discount_price|slice(1) != '0.00' and product.discount_price|slice(0,-1) != '0.00' %}#}
                                            {#-{{ product.discount_price }}#}
                                        {#{% else %}#}
                                            {#{{ product.discount_price }}#}
                                        {#{% endif %}#}
                                    {#</td>#}
                                {#{% endif %}#}
                                <td class="text-center text-price">{{ product.total }}</td>
                                <td class="text-center text-price">{{ product.poundage }}</td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <td class="text-right" colspan="6">
                                {#{% if country_id == 222 or country_id == 81 %}
                                    <i class="giga icon-vat"></i>
                                {% endif %}#}
                                Sub-Total:</td>
                            <td class="text-center text-price">{{ sub_total }} </td>
                        </tr>
                        {#{% if country_id == 223 %}#}
                            {#日本不显示此列#}
                            {#<tr>#}
                                {#<td class="text-right" colspan="7"> Total Quote Discount:</td>#}
                                {#<td class="text-center" colspan="2">#}
                                    {#{% if total_quote_discount|slice(1) != '0.00' and total_quote_discount|slice(0,-1) != '0.00' %}#}
                                        {#-{{ total_quote_discount }}#}
                                    {#{% else %}#}
                                        {#{{ total_quote_discount }}#}
                                    {#{% endif %}#}
                                {#</td>#}
                            {#</tr>#}
                        {#{% endif %}#}
                        {#{% if country_id == 222 or country_id == 81 %}#}
                            {#日本不显示此列#}
                            {#<tr>#}
                                {#<td class="text-right" colspan="7"> Total Service Fee:</td>#}
                                {#<td class="text-center" colspan="2">{{ total_service_fee }} </td>#}
                            {#</tr>#}
                        {#{% endif %}#}
                        <tr>
                            <td class="text-right" colspan="6"> Total Transaction Fee:</td>
                            <td class="text-center">{{ total_transaction }} </td>
                        </tr>
                        <tr>
                            <td class="text-right" colspan="6"> Total Price:</td>
                            <td class="text-center"> <span style="color:red">{{ total_price }}</span></td>
                        </tr>



                        </tbody>

                    </table>
                    {% if comment %}
                        <h2 style="margin: 0 auto;margin-top: 10px;margin-bottom: 10px;" class="content-title">Comments</h2>
                        <table class="table table-hover" style="margin: 0 auto;">
                            <tbody>
                            <tr>
                                <td class="text-left">{{ comment }}</td>
                            </tr>
                            </tbody>
                        </table>
                    {% endif %}
                    {% if histories %}
                        <h2 style="margin: 0 auto;margin-top: 10px;margin-bottom: 10px;" class="content-title">{{ text_history }}</h2>
                        <table class="table table-hover" style="margin: 0 auto;">
                            <thead>
                            <tr>
                                <th class="text-left">{{ column_date_added }}</th>
                                <th class="text-left">{{ column_status }}</th>
                                <th class="text-left">{{ column_comment }}</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% if histories %}
                                {% for history in histories %}
                                    <tr >
                                        <td class="text-left">{{ history.date_added }}</td>
                                        <td class="text-left">{{ history.status }}</td>
                                        <td class="text-left">{{ history.comment }}</td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center">{{ text_no_results }}</td>
                                </tr>
                            {% endif %}
                            </tbody>

                        </table>
                    {% endif %}
                </div>
              {% else %}
                <div style="text-align: center;margin-bottom: 40px;">No records.</div>
              {% endif %}
            </div>



            <div class="buttons clearfix" style="float:right;margin-top: 10px;">
                {#<div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>#}
            </div>
        </div>
    </div>
  </div>
</div>



<script>
    $(function () {
        block.unBlockUI();
    });



</script>

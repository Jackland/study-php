<div class="detail-main bg-white p-2">
  <div class="mb-3">
    <div class="title">Summary of Future Goods Orders Deposits</div>
    <div class="summary over">
      <div class="abstract col-sm-3">
        <i class="gcl gcldingdanhao summary-icon"></i> <br>
        <p class="summary-name">Order ID</p>
        <p class="summary-detail">{{ purchase_order_info.order_id }}</p>
      </div>
      <div class="abstract col-sm-3">
        <i class="gcl gclrenshu summary-icon"></i> <br>
        <p class="summary-name">Store</p>
        <p style="color: #3A75DC;">
          <span class="user_portrait" data-user_customer_id="{{ purchase_order_info.seller_id }}">
            <a class="link" target="_blank" href="{{ url('customerpartner/profile', {'id':purchase_order_info.seller_id}) }}">{{ purchase_order_info.screenname }}</a>
          </span>
          <a style="color:#fa6400;position: absolute;" class="email" target="_blank" href="{{ url('message/seller/addMessage', {'receiver_id':purchase_order_info.seller_id}) }}">
            <i class="giga icon-xinfeng" data-toggle="tooltip" title="" aria-hidden="true" data-original-title="Contact Seller" style="position: relative;top: -2px;"></i>
          </a>
        </p>
      </div>
      <div class="abstract col-sm-3">
        <i class="giga icon-DatePicker summary-icon"></i> <br>
        <p class="summary-name">Order Date</p>
        <p class="summary-detail">{{ purchase_order_info.date_modified }}</p>
      </div>
      <div class="abstract col-sm-3">
        <i class="giga icon-BusinessIcons_BusinessTagSale- summary-icon"></i> <br>
        <p class="summary-name">Order Status</p>
        <p style="color:grey">{{ purchase_order_info.status_name }}</p>
      </div>
    </div>
  </div>
  <div class="details mb-3">
    <div class="title">Details of Future Goods Orders Deposits</div>
    <div>
      <div class="row  ">
        <div class="detail-item col-sm-3">
          <span class="text-right detail-name" style="width: 140px">Image</span>
          <span class="">
              <img src="{{ purchase_order_info.image_show }}" height="40px">
          </span>
        </div>
        <div class="detail-item col-sm-5">
          <span class="text-right detail-name">Item Code of Deposited Product</span>
          <span class="my-color detail-content">
             <span>
               {{ purchase_order_info.sku }}
             </span>
            {% if purchase_order_info.tag %}
              {% for tagDetail in purchase_order_info.tag %}
                {{ tagDetail }}
              {% endfor %}
            {% endif %}
         </span>
        </div>
        <div class="detail-item col-sm-4">
          <span class="text-right detail-name">Product Name</span>
          <span class="detail-content" data-toggle="tooltip", title="{{ purchase_order_info.product_name }}">
          {{ purchase_order_info.product_name | slice(0,12) }}...
          </span>
        </div>
      </div>
      <div class="row">
        <div class="detail-item col-sm-3">
          <span class="text-right detail-name" style="width: 140px" data-translation="定金单价">Deposit Amount</span>
          <span class="detail-content">{{ purchase_order_info.total_price }}</span>
        </div>
        <div class="detail-item col-sm-5">
          <span class="text-right detail-name">Deposited Product Quantity</span>
          <span class="detail-content">{{  purchase_order_info.quantity }}</span>
        </div>
        <div class="detail-item col-sm-4">
          <span class="text-right detail-name">Total Deposited Products</span>
          <span class="detail-content">{{  purchase_order_info.total_price }}</span>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(function () {
    block.unBlockUI();
  });
  function func_one_contact(buyer_id)
  {
    $.ajax({
      type: 'POST',
      url: "{{ url('account/customerpartner/buyer_management/list/addMessage') }}",
      data:{
        receiver_id:buyer_id
      },
      async: false,
      success: function (response) {
        if(parseInt(response.error)==0){
          window.open("{{ url('message/seller/addMessage') }}",'_blank')
        }
      },
    });
  }
</script>

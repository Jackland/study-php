{{ header }}
<div id="page-purchase-order-management" class="page-seller-portal">
  {% include 'giga/template/_parts/breadcrumb_simple.twig' %}

  <div id="account-download" class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>
          {{ heading_title_text }}
          <div class="pull-right">
            <a href="{{ add }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;New brand</a>
            {#<button type="button" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger" onclick="brandDelete()"><i class="fa fa-trash-o"></i></button>#}
          </div>
        </h1>
      </div>
    </div>


    <div class="row mb-4">
      <div class="col-md-12">
        {% if error_warning %}
          <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
          </div>
        {% endif %}
        {% if success %}
          <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
          </div>
        {% endif %}


        <div class="tab-content main">
          <div role="tabpanel" class="tab-pane active" id="upload">
            {#<form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-manufacturer">#}
            <div class="bg-white p-2">
              <h2>{{ text_list }}</h2>
              <table class="table main table-hover">
                <thead>
                <tr>
                  {#<th style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></th>
                  <th class="text-center">{% if sort == 'sort_order' %}
                      <a href="{{ sort_manufacturer_id }}" class="{{ order|lower }}">{{ column_brand_id }}</a>
                      {% else %}
                        <a href="{{ sort_manufacturer_id }}">{{ column_brand_id }}</a>
                      {% endif %}</th>#}
                  <th class="text-center">{% if sort == 'name' %}
                      <a href="{{ sort_name }}" class="{{ order|lower }}">{{ column_name }}</a>
                    {% else %}
                      <a href="{{ sort_name }}">{{ column_name }}</a>
                    {% endif %}</th>
                  {#<th class="text-center">
                      {{ column_oem }}
                  </th>#}
                  {#<th class="text-center">
                      {{ column_relatedProduct }}
                  </th>#}
                  <th class="text-right">{{ column_action }}</th>
                </tr>
                </thead>
                <tbody>
                {% if manufacturers %}
                  {% for manufacturer in manufacturers %}
                    <tr>
                      {#<td class="text-center">{% if manufacturer.manufacturer_id in selected %}
                          <input type="checkbox" name="selected[]" value="{{ manufacturer.manufacturer_id }}" checked="checked" />
                          {% else %}
                            <input type="checkbox" name="selected[]" value="{{ manufacturer.manufacturer_id }}" />
                          {% endif %}</td>
                      <td class="text-center">{{  manufacturer.manufacturer_id }}</td>#}
                      <td class="text-center">{{ manufacturer.name }}</td>
                      {#<td class="text-center">{% if  manufacturer.oem ==1 %} YES {% else %} NO {% endif %}</td>#}
                      {#<td class="text-center"><a href="{{ manufacturer.showDetail }}" data-toggle="tooltip">{{ manufacturer.total }}</a></td>#}
                      <td class="text-right">
                        <div class="action-group">
                          <a href="{{ manufacturer.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class=""><i class="fa fa-pencil"></i></a>
                          <a data-href="{{ manufacturer.delete }}" data-toggle="tooltip" title="{{ button_delete }}" class="delete-brand"><i class="giga icon-action-delete-entry"></i></a>
                        </div>
                      </td>
                    </tr>
                  {% endfor %}
                {% else %}
                  <tr>
                    <td class="text-center" colspan="4">{{ text_no_results }}</td>
                  </tr>
                {% endif %}
                </tbody>
              </table>

              <div class="row">
                <div class="col-sm-12 text-right">{{ pagination }}</div>
              </div>

            </div>
            {#</form>#}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}

<script>
    function brandDelete() {
        /*if(!$('input[name*=\'selected\']:checked').val()){
            alert("Failedï¼šPlease select a brand.");
            return;
        }
        if($('input[name*=\'selected\']:checked').length > 1){
            confirm('{{ text_multi_confirm }}') ? $('#form-manufacturer').submit() : false;
        }else{
            confirm('{{ text_single_confirm }}') ? $('#form-manufacturer').submit() : false;
        }*/
    }

    $('.delete-brand').on('click',function () {
        var href = $(this).attr('data-href');
        layer.confirm(
            '{{ text_confirm_delete }}',
            {
                btn:['Yes','No'],
                title:'Message',
                skin: 'yzc_layer'
            },
            function () {
                layer.closeAll();
                window.location.href = href;
            },
            function () {
                layer.closeAll();
            }
        );
    })

</script>
<script>
    $(function () {
        block.unBlockUI();
        initTicketRma();
    });

    function initTicketRma() {
        //分页链接
        paginationTicketRma();

        upTicketTabCountRma('Rma');
    }

    $(document).ready(function () {
        $(".tickek-right-type-rma").click(function () {
            let that = this;
            block.blockUI();

            $("#wdRma").val("");

            $(".tickek-right-type-rma").parent().each(function (index, Ele) {
                $(Ele).removeClass('li-active');
            });
            $(that).parent().addClass('li-active');

            let url = getUrlForTicketRma();
            $('#show-lists-rma').load(url);
        });

        $(".ticketClickSortRma").click(function(){
            let that = this;
            block.blockUI();

            let url = getUrlForTicketRma();
            let thatVal = $(that).attr('value');
            let thatOrder = $(that).hasClass("asc")?'asc':'desc';

            $(".ticketClickSortRma").removeClass('asc').removeClass('desc');
            $(that).addClass(thatOrder == 'asc' ? 'asc' : 'desc');

            url += thatVal;

            $('#show-lists-rma').load(url);
        });

        $(".input-search-rma").keydown(function (e) {
          if (e.keyCode == 13) {
            filterRma($('#btnSearchRma'))
            return false;
          }
        });
    });



<script type="text/javascript" src="catalog/view/javascript/bootstrap/js/bootstrap-paginator.min.js"></script>
<script src="catalog/view/javascript/jquery/magnific/jquery.magnific-popup.min.js" type="text/javascript"></script>
<link href="catalog/view/javascript/jquery/magnific/magnific-popup.css" type="text/css" rel="stylesheet"/>
<style>
    #div_account_check_title{
        background-color: #337ab7;
        color: #FFFFFF;
    }
</style>

<div role="tabpanel" class="tab-pane active">
  <div class="bg-white p-2">
    <div class="panel panel-primary" style="border: 0;box-shadow: none;">
        <div class="panel-heading" style="background-color: transparent;border: 0;">
            <h2 class="panel-title bg-primary" style="background-color: transparent;color: #183464;">Details</h2>
        </div>
        <div class="panel-body">
          {% if dispatch %}
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                <tr>
                  <th class="text-center">Bring up the store</th>
                  <th class="text-center">Transferred to the store</th>
                  <th class="text-center">Item Code</th>
                  <th class="text-center">Number of uncompleted agreements</th>
                  <th class="text-center">Bring up the number</th>
                  <th class="text-center">Bring up the time</th>
                  <th class="text-center">Reason</th>
                </tr>
                </thead>
                {% for record in dispatch %}
                  <tr>
                    <td class="text-center"><a href="{{ record.bring_up_link }}">{{ record.bring_up_store }}
                        {% if record.bring_up_store %}
                          <i class="giga icon-table-link"></i>
                        {% endif %}
                      </a></td>
                    <td class="text-center"><a href="{{ record.bring_in_link }}">{{ record.bring_in_store }}
                        {% if record.bring_in_store %}
                          <i class="giga icon-table-link"></i>
                        {% endif %}
                      </a></td>
                    <td class="text-center"><a href="{{ record.product_link }}">{{ record.sku }}
                        {% if record.sku %}
                          <i class="giga icon-table-link"></i>
                        {% endif %}
                      </a></td>
                    <td class="text-center">{{ record.uncompleted_num }}</td>
                    <td class="text-center">{{ record.dispatch_num }}</td>
                    <td class="text-center">{{ record.dispatch_time }}</td>
                    <td class="text-center">{{ record.reason }}</td>
                  </tr>
                {% endfor %}
              </table>
            </div>
          {% endif %}
            <div class="table-responsive" style="">
                <input type="hidden" id="input_margin_agreement_id" value="{{ margin_agreement_id }}">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th class="text-center">Sales Order ID</th>
                        <th class="text-center">Store</th>
                        <th class="text-center">Purchase Order ID</th>
                        <th class="text-right">Purchase Date</th>
                        <th class="text-center">Item Code</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-center">Connected Quantity</th>
                        <th class="text-center">RMA ID</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if restOrderList %}
                        {% for restOrder in restOrderList %}
                        <tr>
                            <td class="text-center">{{ restOrder.sales_order_id }}</td>
                            <td class="text-center">{{ restOrder.store_name }}</td>
                            <td class="text-center">
                              {% if restOrder.rest_order_url %}
                                <a href="{{ restOrder.rest_order_url }}">{{ restOrder.rest_order_id }}
                                  {% if restOrder.rest_order_id %}
                                    <i class="giga icon-table-link"></i>
                                  {% endif %}
                                </a>
                              {% else %}
                                {{ restOrder.rest_order_id }}
                              {% endif %}
                              {% if (restOrder.delivery_type==2) %}
                                <i class="giga icon-cwf" style="color: #1f5268;font-size: 15px;" data-toggle="tooltip" data-original-title="{{ cwf }}"></i>
                              {% endif %}
                              </td>
                            <td class="text-right">{{ restOrder.create_day }}<br><span class="text-update-hour">{{ restOrder.create_hour }}</span></td>
                            <td class="text-center">{{ restOrder.sku }}</td>
                            <td class="text-center text-price">{{ restOrder.purchase_quantity }}</td>
                            <td class="text-center text-price">{{ restOrder.connected_quantity }}</td>
                            <td class="text-center">
                                {% if restOrder['rma_ids'] %}
                                    {% for rma in restOrder['rma_ids'] %}
                                        {% if rma.buyer_id == customer_id %}
                                            <a href="{{ rma_url }}{{ rma.rma_id }}">{{ rma.rma_order_id }}
                                              {% if rma.rma_order_id %}
                                                <i class="giga icon-table-link"></i>
                                              {% endif %}</a>
                                        {% else %}
                                            {{ rma.rma_order_id }}
                                        {% endif %}
                                      <br>
                                    {% endfor %}
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center">{{ text_no_results }} </td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>

                <div class="row mt-2" style="margin-right: 0">
                    <div class="col-sm-12 text-right">
                        <ul id="bos_pagination_margin"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>
</div>





<script>
    $(function () {
        block.unBlockUI();

        initMarginAccountCheck();
    });

    function initMarginAccountCheck() {
        paginationMarginAccountCheck();
    }

    function paginationMarginAccountCheck() {
        if ({{ total_pages }}) {
            //total_pages
            $('#bos_pagination_margin').bootstrapPaginator({
                /*当前使用的是3版本的bootstrap*/
                bootstrapMajorVersion: 3,
                /*配置的字体大小是小号*/
                size: 'normal',
                /*当前页*/
                currentPage: {{ page_num }},
                /*一共多少页*/
                totalPages: {{ total_pages }},
                /*页面上最多显示几个含数字的分页按钮*/
                numberOfPages: 5,
                /*设置显示的样式，默认是箭头	*/
                // itemTexts: function(type, page, current) {
                //     switch(type) {
                //         case "first": // type值固定
                //             return `<span class="glyphicon glyphicon-fast-backward"></span>`;
                //         case "prev":
                //             return `<span class="glyphicon glyphicon-step-backward"></span>`;
                //         case "next":
                //             return `<span class="glyphicon glyphicon-step-forward"></span>`;
                //         case "last":
                //             return `<span class="glyphicon glyphicon-fast-forward"></span>`;
                //         case "page":
                //             return page;
                //     }
                // },
                onPageClicked: function (event, originalEvent, type, page) {
                    block.blockUI();
                    let url = getUrlForMarginAccountCheck(page);
                    $('#bid-account_check').load(url);
                }
            });
        }
    }

    function getUrlForMarginAccountCheck(page) {
        let url = 'index.php?route=account/product_quotes/margin/account_check';

        let filter_margin_agreement_id = $.trim($("#input_margin_agreement_id").val());

        if( filter_margin_agreement_id ){
            url += "&id="+encodeURIComponent(filter_margin_agreement_id);
        }

        if (page) {
            url += "&page_num=" + page;
        }
        return url;
    }
</script>
{{ header }}
<style>
    .modal-warehousemapping-area{
        width: 500px;
        height: 600px;
    }

    .modal-itemcodemapping-area{
        width: 500px;
        height: 600px;
    }
    .pagination {
      margin: 0;
    }
    .modal-header .close {
      background-color: #a2a2a2;
    }
    .my-tip {
      color: rgb(198,45,34);
      background-color: rgb(247,195,188);
      padding: 4px 8px;
      border-radius: 8px;
      margin-bottom: 15px;
      word-break: break-word;
    }
    .my-download{
      color: rgb(54,167,218);
      text-decoration: underline;
      vertical-align: bottom;
      text-transform:none !important;
    }
    .my-tip-title{
      font-size: 24px;
      font-weight: 500;
    }
    .sub-title1,.sub-title2{
      word-break: keep-all;
      word-wrap: break-word; /*只对英文起作用，以单词作为换行依据。*/
      white-space: pre-wrap; /*只对中文起作用，强制换行。*/
      text-align:justify;  /*css英文语句的两端对齐：*/
      text-justify:inter-ideograph;
      margin-bottom: 8px;
    }
    .sub-title1{
      color: #000;
      font-weight: bolder;
    }
    .sub-title2{
      color: #bbb;
      font-size: 12px;
    }
    .table > tbody > tr > td:first-child{
      padding-left: 8px;
    }
    .form-wrapper .form-group {
      margin-bottom: 0;
    }
    .layui-layer-dialog .layui-layer-content{
      word-break: break-word;
    }
  .my-hover{
    cursor: pointer;
  }
    .form-group {
      padding-top: 15px;
      padding-bottom: 15px;
      margin-bottom: 0;
    }
  .nav-tabs > li > a,
  .nav-tabs > li.active > a, .nav-tabs > li.active > a:hover, .nav-tabs > li.active > a:focus {
    font-size: 14px;
  }
 h1{
   margin-bottom:30px !important;
 }
  ::-webkit-scrollbar{
    width: 15px;
  }
</style>
<script src="catalog/view/javascript/layer/layer.js" type="text/javascript"></script>
<script type="text/javascript" src="catalog/view/javascript/bootstrap/js/bootstrap-paginator.min.js"></script>


<div id="page-bid-list-spot-price-bid" class="page-seller-portal">
  {#菜单#}
  {% include 'giga/template/_parts/breadcrumb_simple.twig' %}
  {#END 菜单#}
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>{{ text_mapping_management }}</h1>
        <div class="row">
          <div class="col-md-12">

            {% if rma_edit_error %}
              <div class="alert alert-warning alert-dismissible"><i class="fa fa-check-circle"></i> {{ error }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
              </div>
            {% endif %}

            {#Togglable tabs#}
            <ul class="nav nav-tabs main" role="tablist">
              {% if isShowItemCodeMapping == 1 %}
                <li class="active"><a href="#tab-mapping-item-code" data-toggle="tab">Item Code Mapping</a></li>
              {% endif %}
              {% if isShowWarehouseMapping==1 %}
                <li><a href="#tab-mapping-warehouse" data-toggle="tab">Warehouse Mapping</a></li>
              {% endif %}
            </ul>
          </div>
        </div>
      </div>
    </div>


    {#tab页对应内容#}
    <div class="row mb-4">
      <div class="col-md-12">
        <div class="tab-content main">
          {% if isShowItemCodeMapping == 1 %}
            <div class="tab-pane active" id="tab-mapping-item-code">
              <fieldset>
                <div id="show-mapping_item_code_list"></div>
              </fieldset>
            </div>
            <div class="tab-pane" id="tab-mapping-warehouse">
              <fieldset>
                <div id="show-mapping_warehouse_list"></div>
              </fieldset>
            </div>
          {% else %}
            {% if isShowWarehouseMapping == 1 %}
              <div class="tab-pane active" id="tab-mapping-warehouse">
                <fieldset>
                  <div id="show-mapping_warehouse_list"></div>
                </fieldset>
              </div>
            {% endif %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}


<script>

    $(document).ready(function(){
        block.blockUI();
        {% if isShowItemCodeMapping == 1 %}
        $('#show-mapping_item_code_list').load('index.php?route=account/mapping_item_code/index');
        {% endif %}

        {% if isShowWarehouseMapping==1 %}
        $('#show-mapping_warehouse_list').load('index.php?route=account/mapping_warehouse/index');
        {% endif %}
    });


</script>
{{ header }}{{ separate_column_left }}
<script type="text/javascript" src="catalog/view/javascript/layer/layer.js"></script>
{% if separate_view is defined and separate_view %}
<div class="container-fluid" id="content" style="margin-left: 15%">
  {% else %}
  <div class="container">
    {% endif %}
    <div>
      {% if column_left and column_right %}
        {% set class = 'col-sm-6' %}
      {% elseif column_left or column_right %}
        {% set class = 'col-sm-9' %}
      {% else %}
        {% set class = 'col-sm-12' %}
      {% endif %}
      <div>
        <ul class="breadcrumb">
          {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
          {% endfor %}
        </ul>

          <h1>Brand Center
            <div class="pull-right"><a href="{{ add }}" data-toggle="tooltip" title="{{ button_add }}"
                                       class="btn btn-primary"><i class="fa fa-plus"></i></a>
              {#<button type="button" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger"
                      onclick="brandDelete()"><i
                          class="fa fa-trash-o"></i></button>#}
            </div>
          </h1>

      </div>
      <div id="box-shadow">
        {% if error_warning %}
          <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
          </div>
        {% endif %}
        {% if success %}
          <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
          </div>
        {% endif %}
        <div class="panel panel-default" style="border: none">

          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                <tr>
                  <td class="text-center">{% if sort == 'name' %}
                      <a href="{{ sort_name }}" class="{{ order|lower }}">{{ column_name }}</a>
                    {% else %}
                      <a href="{{ sort_name }}">{{ column_name }}</a>
                    {% endif %}</td>
                  <td class="text-center">
                    {{ column_oem }}
                  </td>
                  <td class="text-center">
                    {{ column_relatedProduct }}
                  </td>
                  <td class="text-right">{{ column_action }}</td>
                </tr>
                </thead>
                <tbody>
                {% if manufacturers %}
                  {% for manufacturer in manufacturers %}
                    <tr>
                      <td class="text-center">{{ manufacturer.name }}</td>
                      <td class="text-center">{% if  manufacturer.oem ==1 %} YES {% else %} NO {% endif %}</td>
                      <td class="text-center"><a href="{{ manufacturer.showDetail }}"
                                                 data-toggle="tooltip">{{ manufacturer.total }}</a></td>
                      <td class="text-right"><a href="{{ manufacturer.edit }}" data-toggle="tooltip"
                                                title="{{ button_edit }}" class="btn btn-primary"><i
                            class="fa fa-pencil"></i></a>
                        <a
                          data-href="{{ manufacturer.delete }}"
                          data-toggle="tooltip"
                          title="{{ button_delete }}"
                          class="btn btn-danger delete-brand">
                          <i class="fa fa-trash-o"></i>
                        </a>
                      </td>
                    </tr>
                  {% endfor %}
                {% else %}
                  <tr>
                    <td class="text-center" colspan="4">{{ text_no_results }}</td>
                  </tr>
                {% endif %}
                </tbody>
              </table>
            </div>
            {#</form>#}
            <div class="row">
              <div class=" text-right">{{ pagination }}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{ footer }}

<script>
  $('.delete-brand').on('click', function () {
    var href = $(this).attr('data-href');
    layer.confirm(
      '{{ text_confirm_delete }}',
      {
        btn: ['Yes', 'No'],
        title: 'Message',
        skin: 'yzc_layer',
        btnAlign: 'c',
      },
      function () {
        layer.closeAll();
        window.location.href = href;
      },
      function () {
        layer.closeAll();
      }
    );
  })


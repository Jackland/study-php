<style>
  .page-seller-portal .btn.btn-default.tab-btn:hover{
    background-color: #fa6400;
    border-color: #fa6400;
  }
  div.tab-btn > a.tab-btn {
    padding: 9px 18px;
    font-size: 16px;
    margin-right: 5px;
  }

  .page-seller-portal #track-btn-container {
    right: -8px;
    position: absolute;
  }

  .page-seller-portal #track-btn-item {
    font-size: 14px;
    background-color: #3a75dc;
    border-radius: 4px;
    padding: 6px 10px;
    color: #fff;
  }

  .page-seller-portal #track-btn-item:hover {
    cursor: pointer;
    background-color: #2d57a9;
  }

  .page-seller-portal .tabs-row {
    display: flex;
  }
  .page-seller-portal{
    font-size: 14px;
  }
  p{
    margin-bottom: 0;
  }
  .page-seller-portal .nav-tabs.main > li.active > a,.page-seller-portal .nav-tabs.main > li > a:hover,.page-seller-portal .nav-tabs.main > li.active > a :hover {
    color: #fff;
    background-color: #3a75dc;
    border-color: #3a75dc;
  }
  .form-wrapper select{
    border-radius: 0;
    margin: 0;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-appearance: auto !important;
    -moz-appearance: auto !important;
    background-image: none !important;
  }
  .error-text {
    color: #FF414D;
    font-size: 12px;
  }
  /*标签页样式*/
  .page-seller-portal .tab-content.main{
    overflow: visible;
  }
  .nav-tabs {
    border: none;
  }
  .panel-default{
    margin:0 0 15px 0;
  }
  .panel-default .nav-tabs > li.active > a, .panel-default .nav-tabs > li.active > a:hover, .panel-default .nav-tabs > li.active > a:focus{
    color: #3a75dc;
    cursor: default;
    background-color: transparent;
    border: none;
    border-bottom: 2px solid;
    border-radius: 0;
  }
  .nav {
    margin-bottom: 2px;
  }
  .tab-content>.tab-pane {
    min-height: 100px;
  }
  .nav-tabs li {
    position: relative;
  }
  .tab-content>.tab-pane{
    padding: 10px 0;
  }
  .panel-default .nav-tabs > li{
    padding: 0 10px;
  }
  .panel-default .nav{
    border-bottom: 2px solid #ddd;
  }
  .panel-default .nav-tabs > li > a:hover {
    border-color: transparent;
  }
  .panel-default .nav > li > a:hover, .nav:not(.menu-top) > li > a:focus {
    text-decoration: none;
    background-color: transparent;
    color: #3a75dc;
  }
  .nav-tabs > li > a{
    border: none;
  }
  .tab-content>.tab-pane {
    background: #fff;
  }
  .tab-pane{
    padding: 0 20px;
  }
</style>
<div id="page-sales-order-management" class="page-seller-portal">

  {#菜单#}
  {% include 'giga/template/_parts/breadcrumb_simple.twig' %}
  {#END 菜单#}
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>{{ heading_title_sales_order }}</h1>
        <div class="row tabs-row col-md-12">
          <div class="tabs-container">
            {#Togglable tabs#}
            <ul class="nav nav-tabs main" role="tablist">
              <li id="drop_shipping_li" role="presentation"><a href="#tab_drop_shipping" aria-controls="drop-shipping" role="tab" data-toggle="tab">Drop Shipping</a></li>
              {% if is_show_wholesale  %}
                <li id="cloud_wholesale_li" role="presentation"><a href="#tab_cloud_wholesale" aria-controls="cloud-wholesales" role="tab" data-toggle="tab">Cloud Wholesale Fulfillment</a></li>
              {% endif %}
            </ul>
          </div>
          {% if is_show_tracking_shipment  %}
              <div id="track-btn-container" role="presentation">
                <div id="track-btn-item">
                    <i class="giga icon-tracking"></i>
                     Track Shipment
                </div>
              </div>
          {% endif %}
        </div>
      </div>
    </div>


    {#tab页对应内容#}
    <div class="row mb-4">
      <div class="col-md-12">

        <div class="tab-content main">
          <div class="tab-pane active" id="tab_drop_shipping">
            <div id="drop_shipping_show"></div>
          </div>
          <div class="tab-pane" id="tab_cloud_wholesale">
            <fieldset>
              <div id="cloud_wholesale_show"></div>
            </fieldset>
          </div>

        </div>
      </div>

    </div>

  </div>

</div>


{{ footer }}
<script>
    $('.tab-content').children().removeClass('active');
    $('#tab_drop_shipping').addClass('active');
    $('#drop_shipping_li').addClass('active');
    let query = '';
    {% if filter_orderStatus is defined %}
      query += '&filter_orderStatus=' + '{{ filter_orderStatus }}';
    {% endif %}
    {% if filter_tracking_number is defined %}
      query += '&filter_tracking_number=' + '{{ filter_tracking_number }}';
    {% endif %}
    {% if filter_orderId is defined %}
    query += '&filter_orderId=' + '{{ filter_orderId }}';
    {% endif %}
    $('#drop_shipping_show').load('index.php?route=account/sales_order/sales_order_management/salesOrderTab' + query);
    {% if is_show_wholesale  %}
      $('#cloud_wholesale_li').removeClass('active');
      $('#cloud_wholesale_show').load('{{ url_cloud_wholesale_fulfillment }}');
    {% endif %}
    //控制跳转tab页
    {% if tab == 1 %}
        $('#drop_shipping_li a:first').tab('show');
    {% elseif tab == 2 %}
        $('#cloud_wholesale_li a:first').tab('show');
        $('#track-btn-container').hide();
    {% endif %}

    //物流单查询转跳
    $('#track-btn-item').click(function(){
      window.open("/index.php?route=account/sales_order/tracking_search","_blank");
    });


    $('#drop_shipping_li').click(function(){
      $('#track-btn-container').show();
    });

    $('#cloud_wholesale_li').click(function(){
      $('#track-btn-container').hide();
    });
</script>



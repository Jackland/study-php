                                                                        {% if notice.is_marked %}
                                                                            data-cnzz-event="Message Center|MS_fromnotice_kind_unmarked"
                                                                        {% else %}
                                                                            data-cnzz-event="Message Center|MS_fromnotice_kind_marked"

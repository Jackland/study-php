                                                            <input type="checkbox" name="selected[]" style="margin: 0"  onclick="inputChecked()" value="{{ notice.notice_id }}" data-make-sure-status="{{ notice.make_sure_status }}" data-data-model="{{ notice.data_model ?? 'notice' }}"/>
                                                        </td>

    var letterTypeList = JSON.parse('{{ letter_type | json_encode() }}');
    var selectVal = $(this).val();
    var parentSelect = $("#filter_type_id");
    var typeList = [];
    parentSelect.html('');
    if (selectVal == 0) {
      parentSelect.attr("disabled","disabled");
    } else {
      if (selectVal == 1) {

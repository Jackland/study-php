{{ header }}{{ separate_column_left }}
<style>
  .main{
    width: 90%;
    margin: 30px auto;
    /*border: 5px solid #478BFF;*/
    box-shadow: #aaa 0 0 10px;
    padding: 10px 5%;
  }
  .coulmn3,.coulmn2,.coulmn1{
    margin: 40px auto;
  }
  h1{
    text-align: center;
    font-weight: bold;
    margin: 50px auto;
  }
  h4{
    font-size: 20px;
    margin: 20px 0;
  }
  h4 span{
    font-weight: bold;
    padding-right: 10px;
  }
  .coulmn3 .table{
    /*border: 1px solid #eee;*/
  }
  .coulmn3 .table>thead>tr>th,
  .coulmn3 .table>tbody>tr>td{
    padding: 10px;
    border-top: none;
    text-align: center;
    vertical-align: middle;
  }
  .aa td,.aa th{
    padding: 5px 8px;
  }
  .aa tr>td:first-child{
    width: 400px;
  }
  .bg-white{
    background: #fff;
  }
</style>
{% if separate_view is defined and separate_view %}
<div class="container-fluid giga-content" id="content" style="margin-left: 15%">
  {% else %}
  <div class="container">
    {% endif %}
    <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
    <div class="row bg-white" style="padding: 0 15px;">

      <h1>
        European Country Code Chart
        <a href="{{ url_back }}" data-toggle="tooltip" title="" class="btn btn-default pull-right" data-original-title="Back">
          <i class="fa fa-reply"></i>
        </a>
      </h1>
      <div class="coulmn3">
        <table class="table table-hover table-striped">
          <thead>
          <tr>
            <th width="20%">Country</th>
            <th width="20%">Country Code</th>
            <th width="20%"></th>
            <th width="20%">Country</th>
            <th width="20%">Country Code</th>
          </tr>
          </thead>
          <tbody>
          {% if list %}
            {% for rowed in list|batch(2) %}
              <tr>
                {% for key, item in rowed %}
                  <td>{{ item.Country }}</td>
                  <td>{{ item.Code }}</td>
                  {% if key%2 == 0 %}
                    <td></td>
                  {% endif %}
                {% endfor %}
              </tr>
            {% endfor %}
          {% else %}
            <td colspan="5">No Record.</td>
          {% endif %}
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

{{ footer }}

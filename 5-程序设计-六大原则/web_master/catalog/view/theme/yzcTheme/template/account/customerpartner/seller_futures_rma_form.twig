    font-size: 20px;
    color: #183464;
  }

  #main-form {
    margin-top: 30px;
  }

  .table thead > tr > th {
    color: #ccc;
  }
  .no-padding{
    padding: 0;
  }
  .flex-layout{
    display: flex;
    align-items: center;
  }

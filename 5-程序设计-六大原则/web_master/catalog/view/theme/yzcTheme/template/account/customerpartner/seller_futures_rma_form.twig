    max-width: 100%;
    max-height: 100%;
    vertical-align: middle;
  }

  .upload_warp_left img {
    margin-top: 35px;
  }


  .comments_textarea {
    resize: none;
    height: 140px !important;
  }

  .item_detail {
    /*color: #3c763d;*/
    color: #666;
    background-color: #dff0d8;
    padding: 10px;

<div class="modal-body" >

  <div style="width:96%;margin: 0 auto;float: left;">
    <div style="float: left;width: 100%;">
      <ul class="layui-timeline">
        {% for key,value in time_line %}
          <li class="layui-timeline-item">
            <i class="layui-icon layui-timeline-axis" style="background-color: {{ value.color }};left: -1px;"></i>
            <div class="layui-timeline-content layui-text">
              <div class="layui-timeline-title" style="width: 100%;">
                <span style="width:100%;">
                {{ value.time }} - {{ value.status_name }}
                </span>
                <br/>
                {% if value.status == 0  or value.status == 1%}
                  <span style="background-color: #eee;padding: 0 2% 0 2%; width: 80%;font-size: 12px;line-height: 20px;height: 20px;margin-top: 5px;">
                    {{ value.platform_sku }}&nbsp;&nbsp;-&nbsp;&nbsp;{{ value.b2b_sku }}&nbsp;&nbsp;-&nbsp;&nbsp;{{ value.name }}
                  </span>
                {% elseif value.status == 2  or value.status == 5%}
                  <span style="width: 100%;word-wrap: break-word;word-break: break-all;overflow: hidden;">
                    {{ value.memo }}<br/>
                  </span>
                  {% if value.img_list %}
                    {% for k,v  in value.img_list %}
                      <img src="{{ v.img_real_path }}" data-toggle="tooltip" style="width: 100px;height: 100px;margin:10px 10px 0 0;cursor: pointer" title="{{ v.img_real_name }}">
                    {% endfor %}
                  {% endif %}
                {% else %}

                {% endif %}

              </div>
            </div>
          </li>
        {% endfor %}
        
      </ul>
    </div>
  </div>

</div>
<style>
  .layui-timeline-axis {
    width: 15px;
    height: 15px;
    line-height: 15px;
  }
  .layui-timeline-item:before {
    width: 3px;
  }
</style>
<script>
  $(function () {
      $('[data-toggle="tooltip"]').tooltip();
  });
</script>
{% set container_info=' class="container"' %}
{% if separate_view is defined and separate_view %}
  {% set container_info=' class="container-fluid" id="content" style="margin-left: 235px"' %}
{% endif %}
<div {{ container_info }}>
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <h1>{{ heading_title }}</h1>
  <div class="row nav-oris">
    <div id="content" class="col-sm-12">{{ content_top }}
      <ul class="nav nav-tabs">
        <li class="active">
          <a href="#pane-active_page" id="tab-active_page" data-toggle="tab">{{ tab_active }}</a>
        </li>
        <li>
          <a href="#pane-inactive_page" id="tab-inactive_page" data-toggle="tab">{{ tab_inactive }}</a>
        </li>
      </ul>
      <div>
        <div class="tab-content">
          {# active start #}
          <div class="tab-pane active" id="pane-active_page">
          </div>
          {# active end #}

          {# inactive start #}
          <div class="tab-pane " id="pane-inactive_page">
          </div>
          {# inactive end #}
        </div>
      </div>
    </div>
  </div>
</div>

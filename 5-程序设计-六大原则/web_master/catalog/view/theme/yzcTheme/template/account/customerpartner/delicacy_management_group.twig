    layerMsg(response.msg, 1500);
    if (otherParams._this !== undefined) {
      $(otherParams._this).button('reset');
    }
    func_table_refresh(otherParams.table);
  }

  function func_download(_this,is_product_group_tab) {
    let type = '';
    if (!is_product_group_tab) {
      if (tab_is_p_buyers) {
        type = 'p_bs';
      }else{
        type = 'p_bgs';
      }
    }else{
      if (tab_is_pg_buyers) {
        type = 'pb_bs';
      }else {
        type = 'pb_bgs';
      }
    }
    window.location.href = url_download + '&type=' + type;
  }

  //endregion

  //region common functions

  // 加载 表格
  function func_load_table(table_id, is_init) {
    if (is_init) {
      func_table_refresh(table_id);
    } else {
      window['init_' + table_id]();
    }
  }

  // bootstrapTable 刷新
  function func_table_refresh(table_id) {
    $("#" + table_id).bootstrapTable('refresh');
  }

  function layerMsg(message, time = 2000) {
    layer.msg(message, {time: time});
  }

  function ajax(data, url, successCallback, otherParams = null, errorCallback = undefined) {
    $.ajax({
      url: url,
      type: 'POST',
      dataType: 'json',
      data: data,
      beforeSend: function () {
        layer.load();
      },
      success: function (json) {
        successCallback(json, otherParams);
      },
      error: function (xhr, ajaxOptions, thrownError,) {
        if (errorCallback === undefined) {
          alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
        }
      }
    })
  }
  //endregion
</script>
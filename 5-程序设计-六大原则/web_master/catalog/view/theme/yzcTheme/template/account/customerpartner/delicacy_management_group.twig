<script>
  //region url

  let url_get_products = '{{ url_get_products }}';
  let url_get_product_groups = '{{ url_get_product_groups }}';

  let url_get_buyers_by_product = '{{ url_get_buyers_by_product }}';
  let url_get_buyer_groups_by_product = '{{ url_get_buyer_groups_by_product }}';

  let url_get_buyers_by_product_group = '{{ url_get_buyers_by_product_group }}';
  let url_get_buyer_groups_by_product_group = '{{ url_get_buyer_groups_by_product_group }}';

  let url_get_unlink_buyer_groups_by_product_group = '{{ url_get_unlink_buyer_groups_by_product_group }}';
  let url_get_unlink_buyers_by_product = '{{ url_get_unlink_buyers_by_product }}';

  let url_link_buyer_groups_by_pg = '{{ url_link_buyer_groups_by_pg }}';
  let url_link_buyers_by_p = '{{ url_link_buyers_by_p }}';

  let url_product_page = '{{ url_product_page }}';
  let url_buyer_group_page = '{{ url_buyer_group_page }}';

  let url_batch_delete ='{{ url_batch_delete }}';
  let url_batch_delete_delicacy_manage ='{{ url_batch_delete_delicacy_manage }}';

  let url_download = '{{ url_download }}';

  let tb_select_products_is_init = false;

  let tb_list_p_buyers_is_init = false;
  let tb_list_p_buyer_groups_is_init = false;

  let tb_list_pg_buyers_is_init = false;
  let tb_list_pg_buyer_groups_is_init = false;

  let tb_window_pg_buyer_groups_is_init = false;
  let tb_window_p_buyers_is_init = false;

  let this_product_id = 0;
  let this_product_group_id = 0;

  let tab_is_products = false;
  let tab_is_p_buyers = true;
  let tab_is_pg_buyers = false;

  //endregion

  layer.config({
      // extend: 'yzc/style.css',
      // skin: 'yzc_layer',
      scrollbar: false,
      offset: 'auto',
      title: 'Message',
      btnAlign: 'c',
  });


  $(function () {
    init_tb_select_product_groups();
  });

  // 切换 Product-Tab
  function func_first_tab(_this, tab) {
    if (!$(_this).hasClass('active')) {
      $(_this).siblings().removeClass('active');
      $(_this).addClass('active');

      $("#div_list_products").toggleClass('hidden');
      $("#div_list_product_groups").toggleClass('hidden');

      // Products Tab
      if (tab === 'products') {
        tab_is_products = true;
        $("#div_select_products").removeClass('hidden');
        $("#div_select_product_groups").addClass('hidden');
        func_load_table('tb_select_products', tb_select_products_is_init);
      } else {    // Product Groups Tab
        tab_is_products = false;
        $("#div_select_products").addClass('hidden');
        $("#div_select_product_groups").removeClass('hidden');
        func_table_refresh('tb_select_product_groups');
      }
    }
  }

  // 切换 Buyer-Tab
  function func_second_tab(_this, first_tab, second_tab) {
    if (!$(_this).hasClass('active')) {
      $(_this).siblings().removeClass('active');
      $(_this).addClass('active');

      if (first_tab === 'products') {
        $(".div_list_p_buyers").toggleClass('hidden');
        $(".div_list_p_buyer_groups").toggleClass('hidden');
        if (second_tab === 'buyers') {
          tab_is_p_buyers = true;

          // load tb_list_pg_buyers 表
          func_load_table('tb_list_p_buyers', tb_list_p_buyers_is_init);
        } else {
          tab_is_p_buyers = false;

          // load tb_list_pg_buyers 表
          func_load_table('tb_list_p_buyer_groups', tb_list_p_buyer_groups_is_init);
        }
      } else {    // Buyer Groups Tab
        $(".div_list_pg_buyers").toggleClass('hidden');
        $(".div_list_pg_buyer_groups").toggleClass('hidden');
        if (second_tab === 'buyers') {
          tab_is_pg_buyers = true;
          func_load_table('tb_list_pg_buyers', tb_list_pg_buyers_is_init);
        } else {
          tab_is_pg_buyers = false;
          func_load_table('tb_list_pg_buyer_groups', tb_list_pg_buyer_groups_is_init);
        }
      }
    }
  }

  // P
  function init_tb_select_products() {
    tb_select_products_is_init = true;
    $("#tb_select_products").bootstrapTable({
      url: url_get_products,
      queryParams: function (params) {
        return '';
      },
      // toolbar: "",
      sidePagination: "true",
      striped: true, // 是否显示行间隔色
      search: "true",
      searchAlign: "left",
      uniqueId: "product_id",
      idField: "num",
      pageSize: "10",
      showRefresh: false,
      pagination: false, // 是否分页
      sortable: true, // 是否启用排序
      height: 400,
      selectItemName: 'select_products',
      columns: [
        {
          field: '',
          title: '',
          halign: 'center',
          valign: 'center',
          align: 'center',
          radio: true
        },
        {
          field: 'num',
          title: 'No.',
          halign: 'center',
          valign: 'center',
          align: 'center',
          sortable: true
        },
        {
          field: 'sku',
          title: 'Item Code',
          halign: 'center',
          valign: 'center',
          align: 'center',
          sortable: true
        },
        {
          field: 'mpn',
          title: 'MPN',
          halign: 'center',
          valign: 'center',
          align: 'center',
          sortable: true
        },
        {
          field: 'name',
          title: 'Product Name',
          halign: 'center',
          valign: 'center',
          align: 'center',
          width: 350,
          sortable: true,
          class: 'break-row',
          formatter: function (value, row, index) {
            return '<a class="a-link" href="' + url_product_page + row.product_id + '" target="_blank" >' + row.name + '</a>';
          }
        },
        // {
        //   field: 'update_time',
        //   title: 'Updated Date',
        //   halign: 'center',
        //   valign: 'center',
        //   align: 'center',
        //   sortable: true
        // },
        {
          field: 'groups',
          title: 'Product Groups',
          halign: 'center',
          valign: 'center',
          align: 'center',
          sortable: true,
          formatter: function (value, row, index) {
            let html = '';
            if (row.groups.length > 0) {
              $.each(row.groups, function (i, r) {
                html += (html.length < 1 ? '' : '<br>') + '<a class="a-link" target="_blank" href="{{ url_product_group_page }}'+r.group_id+'">'+ r.group_name+'</a>';
              });
            } else {
              html = '-';
            }
            return html;
          }
        },
      ],
      singleSelect: true,
      clickToSelect: true,
      maintainSelected: true,
      onCheck: function (row, ele) {
        this_product_id = row.product_id;

        if (tab_is_p_buyers) {
          // 加载 tb_list_pg_buyers 表
          func_load_table('tb_list_p_buyers', tb_list_p_buyers_is_init);
        } else {
          // 加载 tb_list_pg_buyer_groups 表
          func_load_table('tb_list_p_buyer_groups', tb_list_p_buyer_groups_is_init);
        }

        if (!tb_window_p_buyers_is_init) {
          init_tb_window_p_buyers();
        }
      },
      onLoadSuccess: function (data) {
        if (data.length > 0) {
          let this_table = $("#tb_select_products");
          this_table.bootstrapTable('check', 0);

          let this_div = $("#div_select_products");
          if (this_div.find('.fixed-table-toolbar>button').length <= 0) {
              let btn_html = '<button type="button" class="btn btn-default pull-right" onclick="func_download(this,false)" ' +
                  'style="margin:10px 5px 0 15px"  data-toggle="tooltip" title="Download"><i class="fa fa-download"></i></button>';
              this_div.find(".fixed-table-toolbar .search").after(btn_html);
          }
        }
      }
    });
  }

  // PG
  function init_tb_select_product_groups() {
    $("#tb_select_product_groups").bootstrapTable({
      url: url_get_product_groups,
      queryParams: function (params) {
        return '';
      },
      // toolbar: "",
      sidePagination: "true",
      striped: true, // 是否显示行间隔色
      search: "true",
      searchAlign: "left",
      uniqueId: "id",
      idField: "num",
      pageSize: "10",
      showRefresh: false,
      pagination: false, // 是否分页
      sortable: true, // 是否启用排序
      height: 400,
      selectItemName: 'select_product_groups',
      columns: [
        {
          field: '',
          title: '',
          halign: 'center',
          valign: 'center',
          align: 'center',
          radio: true
        },
        {
          field: 'num',
          title: 'No.',
          halign: 'center',
          valign: 'center',
          align: 'center',
          sortable: true
        },
        {
          field: 'name',
          title: 'Product Group',
          halign: 'center',
          valign: 'center',
          align: 'center',
          sortable: true,
          formatter: function (value, row, index) {
            return "<a class=\"a-link\" target='_blank' href='{{ url_product_group_page }}" + row.id + "'>" + row.name + "</a>";
          }
        },
        {
          field: 'description',
          title: 'Description',
          halign: 'center',
          valign: 'center',
          align: 'center',
          width: '500px',
          class: 'break-row',
          sortable: true
        },
        {
          field: 'update_time',
          title: 'Updated Date<span data-toggle="tooltip" title="{{ tip_us_time }}"><i class="giga icon-V10-wenhaotishi"></i></span>',
          halign: 'center',
          valign: 'center',
          align: 'center',
          sortable: true,
        },
      ],
      singleSelect: true,
      clickToSelect: true,
      maintainSelected: true,
      onCheck: function (row, ele) {
        this_product_group_id = row.id;

        if (tab_is_pg_buyers) {
          // 加载 tb_list_pg_buyers 表
          func_load_table('tb_list_pg_buyers', tb_list_pg_buyers_is_init);
        } else {
          // 加载 tb_list_pg_buyer_groups 表
          func_load_table('tb_list_pg_buyer_groups', tb_list_pg_buyer_groups_is_init);
        }
        if (!tb_window_pg_buyer_groups_is_init) {
          init_tb_window_pg_buyer_groups();
        }
      },
      onLoadSuccess: function (data) {
        if (data.length > 0) {
          let this_table = $("#tb_select_product_groups");
          this_table.bootstrapTable('check', 0);

          let this_div = $("#div_select_product_groups");
          if (this_div.find('.fixed-table-toolbar>button').length <= 0) {
            let btn_html = '<button type="button" class="btn btn-default pull-right" onclick="func_download(this,true)" ' +
              'style="margin:10px 5px 0 15px"  data-toggle="tooltip" title="Download"><i class="fa fa-download"></i></button>';
            this_div.find(".fixed-table-toolbar .search").after(btn_html);
          }
        }
      }
    });
  }

  // P-B
  function init_tb_list_p_buyers() {
    tb_list_p_buyers_is_init = true;
    $("#tb_list_p_buyers").bootstrapTable({
      url: url_get_buyers_by_product,
      queryParams: function (params) {
        return {product_id: this_product_id};
      },
      // toolbar: "",
      sidePagination: "true",
      striped: true, // 是否显示行间隔色
      search: "true",
      searchAlign: "left",
      uniqueId: "dm_id",
      idField: "num",
      pageSize: "10",
      showRefresh: false,
      pagination: false, // 是否分页
      sortable: true, // 是否启用排序
      height: 400,
      selectItemName: 'select_l_p_b',
      columns: [
        {
          field: 'null_columns',
          title: '',
          halign: 'center',
          valign: 'center',
          align: 'center',
          checkbox: true,
          formatter:function(value,row,index){
            return {
              disabled: row.dm_id <= 0,
              checked: false,
              value:false
            }
          }
        },
        {
          field: 'num',
          title: 'No.',
          halign: 'center',
          valign: 'center',
          align: 'center',
          sortable: true
        },
        {
          field: 'nickname',
          title: 'Name',
          halign: 'center',
          valign: 'center',
          align: 'center',
          sortable: true,
          width:'230',
          formatter: function (value, row, index) {
            let html = row.nickname;
            let img_url;
            let tip_content;
            if (row.is_home_pickup) {
              img_url = '{{ asset('image/icons/HomePickup/home_pickup-15x15.png') }}';
              tip_content = '{{ tip_home_pickup_logo }}';
            } else {
              img_url = '{{ asset('image/icons/HomePickup/drop_shipping-15x15.png') }}';
              tip_content = '{{ tip_drop_shipping_logo }}';
            }
            html += '<span class="img_logo"><img class="oris-tooltip" data-toggle="tooltip" style="padding-left: 1px" src="' + img_url + '" data-original-title="' + tip_content + '"></span>';
            return html + row.ex_vat;
          }
        },
        {
          field: 'remark',
          title: 'Remark',
          halign: 'center',
          valign: 'center',
          align: 'center',
          width: '500px',
          class: 'break-row',
          sortable: true
        },
        {
          field: 'buyer_group_name',
          title: 'Buyer Group',
          halign: 'center',
          valign: 'center',
          align: 'center',
          formatter: function (value, row, index) {
            let string_row = '-';
            if (row.buyer_group_name) {
              string_row = '<a href="' + url_buyer_group_page + row.buyer_group_id + '" target="_blank" >' + row.buyer_group_name + (row.is_default ? '(default)' : '') + '</a>';
            }
            return string_row;
          }
        },
        {
          field: 'visibility',
          title: 'Visibility',
          halign: 'center',
          valign: 'center',
          align: 'center',
        },
        {
          field: 'add_time',
          title: 'Creation Date<span data-toggle="tooltip" title="{{ tip_p_bgs_create_date }}"><i class="giga icon-V10-wenhaotishi"></i></span>',
          halign: 'center',
          valign: 'center',
          align: 'center',
          sortable: true
        },
        {
          field: '',
          title: 'Action',
          halign: 'center',
          valign: 'center',
          align: 'center',
          formatter: function (value, row, index) {
            let is_disabled = row.dm_id > 0 ? '' : 'disabled';
            return '<a onclick="func_remove_b_by_p(' + index + ',' + row.dm_id + ',this,\'tb_list_p_buyers\',\''+row.nickname+'\');" data-toggle="tooltip" title="Remove" '
              + is_disabled + ' class="btn btn-danger btn-form-display"><i class="fa fa-trash-o"></i></a>';
          }
        },
      ],
      // singleSelect: true,
      clickToSelect: true,
      maintainSelected: true,
      onCheck: function (row, ele) {},
      onUncheck: function (row, ele) {},
      onLoadSuccess: function (data) {
        let this_div = $(".div_list_p_buyers");
        if (this_div.find('.fixed-table-toolbar>button').length <= 0) {
          let btn_html = '<button type="button" class="btn btn-danger pull-right" onclick="func_batch_remove_bs_by_p(this,\'tb_list_p_buyers\')" ' +
            'style="margin:10px 5px 0 5px" data-toggle="tooltip" title="Remove"><i class="fa fa-trash-o"></i></button>' +
            '<button type="button" class="btn btn-primary pull-right" onclick="func_show_window_p_buyers(this)" ' +
            'style="margin:10px 5px 0 15px"  data-toggle="tooltip" title="Add"><i class="fa fa-plus"></i></button>';
          this_div.find(".fixed-table-toolbar .search").after(btn_html);
        }
      }
    });
  }


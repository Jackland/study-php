  },
  {
    text: __('Complex Transactions List', {}, 'catalog/document'),
    href: url('account/customerpartner/wk_quotes_admin', {tab:'margin'}),
  },
  'current'
]) }}
{{
  this.params('pageTitle', {
    show: true,
    title: this.getTitle(),
    backUrl: '',
    buttons: []
  })

<style>
  .text-left {
    text-align: left !important;
  }

  #mass-receive-container .search-row {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #mass-receive-container .search-button {
    margin-left: 12px;
    height: 40px
  }

  #mass-receive-container .search-input-container {
    width: 100%;
  }

  #mass-receive-container .search-input {
    padding-left: 30px;
  }

  #mass-receive-container .search-input-icon {
    position: absolute;
    color: #999;
    top: 9px;
    left: 8px
  }
</style>

<div class="msgcent msg-layer__content" id="mass-receive-container">
  <div class="mass-receive-search-container">
    <div class="oris-row search-row">
      <div class="search-input-container">
        <input class="oris-input search-input" placeholder="Search buyer" id="filter-mass-receive" value="{{ search.filter_receiver }}"></input>
        <i class="giga icon-V10_sousuotubiao search-input-icon"></i>
      </div>
      <button class="oris-button search-button" id="mass-receive-search">Filter</button>
    </div>
  </div>
  <div class="msgcent msg-table__container">
    <table class="table-hover oris-table oris-table-minicheck">
      <thead>
        <tr>
          <th class="text-left" style="width: 60px;">
            #
          </th>
          <th class="text-left" style="width: 240px;">Recipient name</th>
          <th class="text-center">Recipient ID</th>
          <th class="text-left" style="width: 142px;">Time</th>
          <th class="text-center">Send result</th>
        </tr>
      </thead>
      <tbody>
      {% if list %}
        {% for key,receive in list %}
          <tr>
            <td class="text-left" style="width: 60px;">
              {{ key + 1 }}
            </td>
            <td class="text-left" style="width: 240px;"><span class="msg-subject-tdspan">{{ receive.receiver.nickname }}</span></td>
            <td class="text-center">{{ receive.receiver.user_number }}</td>
            <td class="text-left" style="width: 142px;">{{ receive.create_time }}</td>
            <td class="text-center">Success</td>
          </tr>
        {% endfor %}
      {% else %}
        <tr>
          <td class="text-center" colspan="5">No Records Found !</td>
        </tr>
      {% endif %}
      </tbody>
    </table>
  </div>
  <div class="oris-row oris-pagination">
    <ul id="mass-receive_pagination"
        data-url="{{ paginator.getUrlWithNoPage() }}"
        data-total="{{ paginator.getTotalCount() }}"
        data-total_pages="{{ max(paginator.getPageCount(), 1) }}"
        data-page="{{ paginator.getPage() }}"
        data-page_size="{{ paginator.getPageSize() }}"
    ></ul>
  </div>
</div>


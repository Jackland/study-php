<div id="page-sellers">
  <div class="breadcrumb-wrapper text-center clearfix">
    <h1>
      {% if my_seller_flag == 1 %}
        My Sellers
      {% else %}
        All Sellers
      {% endif %}
    </h1>
    {% include 'giga/template/_parts/breadcrumb.twig' %}
  </div>
  <div class="container">
    <div class="search form-group">
      <label>
        <input type="checkbox" onclick="changeStatus(this)" style="margin-right: 10px;" id="checkfirst"> Select All
      </label>
      <button class="btn batch-upload" id="batch_download">Batch Download</button>
      <div style="float: right;display: inline-block;right: 45px;position: relative">
        <input placeholder="Seller Store" class="form-control search-input" id="search-input" type="text" value="{{ store_name }}"><button class="btn search-btn" onclick="getSellerInfo()"><i class="giga icon-search-field" style="font-size: 13px"></i></button>
      </div>
    </div>
    <div class="all-sellers">
      {#      每行的信息#}
      {% if partners %}
        {% for partner in partners %}
          <div class="seller">
            <div class="seller-check">
              <label>
                <input type="checkbox" id="seller-{{ partner['customer_id'] }}" onclick="changeStatusOne(this)">
              </label>
            </div>
            <div class="shop">
              <div class="shop-top">
                <div class="shop-img">
                  <a href="{{ partner['sellerHref'] }}" target="_blank">
                    <img src="{{ partner['thumb'] }}" alt="{{ partner['screenname'] }}" title="{{ partner['screenname'] }}" width="100%">
                  </a>
                </div>
                <div class="shop-info">
                  <h5 class="shop-name" title="{{ partner['screenname'] }}"><a href="{{ partner['sellerHref'] }}" target="_blank">{{ partner['screenname'] }} ></a></h5>
                  {% if partner['total_products']>0 %}
                    <p class="kind" title="{{ partner['main_category'] }}">{{ partner['main_category']  }}</p>
                  {% else %}
                    <p class="kind" title="Others">Others</p>
                  {% endif %}
                  <p class="product-count"><span style="font-weight: bold">{{ partner['total_products'] }}</span> products</p>
                </div>
              </div>
              <div>
                {#buyer是否登录,且对应的seller是否参与评分#}
                {% if isLogin and partner['comprehensive']['seller_show']==1 %}

                  {% if partner['new_seller_score'] %}
                    <div class="store-score pop-down-new" style="cursor: default">
                      <span class="score">New Seller</span>
                    </div>
                  {% else %}
                    <div class="store-score pop-down-new">
                      <span class="score">{{ partner['comprehensive']['total'] }}</span>
                      <div class="pop-down">
                        <div class="popover-content text-small">
                          <b>GIGA Index</b>
                          <div class="index-content">
                            <span>The GIGA Index serves as a Seller Performance Index automatically calculated by the Giga Cloud MarketPlace with a maximum possible index score of 100.</span><br>
                            <span>Click [Learn more] to learn how the GIGA Index is calculated.</span>
                          </div>
                          <a class="link" href="{{ partner['comprehensive']['url'] }}" target="_blank">Learn More</a>
                        </div>
                      </div>
                    </div>
                  {% endif %}

                {% endif %}
                {% if partner['store_return_rate_mark']=='N/A' %}
                  <p class="text-muted rates">Return Rate: N/A
                    <i class="giga icon-V10-wenhaotishi" data-toggle="tooltip"
                       title="The volume of total units sold is not enough for judging return rate." style="font-size: 12px"></i></p>
                {% else %}
                  <p class="text-muted rates">Return Rate: {{ partner['store_return_rate_mark'] }}</p>
                {% endif %}
                <p class="rates">Return Approval Rate:
                  {% if partner['return_approval_rate'] == 0 %}
                    N/A <i class="giga icon-V10-wenhaotishi" data-toggle="tooltip" title="No RMA records." style="font-size: 12px"></i>
                  {% elseif partner['return_approval_rate'] > 90 %}
                    High
                  {% elseif partner['return_approval_rate'] > 60 %}
                    Moderate
                  {% else %}
                    Low
                  {% endif %}</p>
                {% if partner['store_response_rate_mark'] %}
                  <p class="rates">Response Rate: {{ partner['store_response_rate_mark'] }}</p>
                {% endif %}
              </div>
            </div>
            {#        商品信息#}
            <div class="item-pds">
              {% if partner['total_products']>0 %}
                {% for product in partner['products'] %}
                  <div class="products" id="{{ product['product_id'] }}">
                    <div class="products-img">
                      <img src="{{ product['thumb'] }}" title="{{ product['name'] }}" width="100%" height="100%" style="vertical-align:baseline;" onclick="window.open('{{ product['href'] }}','_blank')">
                    </div>
                    <p class="products-code max-line1" title="{{ product['sku'] }}">{{ product['sku'] }}</p>
                    {% if product['min_price_show'] == product['max_price_show']%}
                      <p class="products-price" title="{{ product['min_price_show'] }}/Unit">
                        {{ product['min_price_show'] }}/Unit
                      </p>
                    {% else %}
                      <p class="products-price" title="{{ product['min_price_show'] }}-{{ product['max_price_show'] }}/Unit">
                        {{ product['min_price_show'] }}-{{ product['max_price_show'] }}/Unit
                      </p>
                    {% endif %}
                  </div>
                {% endfor %}
              {% else %}
                {#   The store has no valid products   #}
                <div class="empty-tip">
                  The store has no valid products.
                </div>
              {% endif %}
            </div>
            {#        #}
            <div class="message-view">
              {% if partner['total_products'] > 5 %}
                <div class="message">
                  <button class="btn btn-message" onclick="window.open('{{ partner['contactSellerLink'] }}','_blank')"><i class="giga icon-xinfeng"></i> Message seller</button>
                </div>
                <div class="view">
                  <button class="btn btn-view" onclick="window.open('{{ partner['sellerProductsHref'] }}','_blank')"><i class="giga icon-chakan1"></i> View more products</button>
                </div>
              {% else %}
                <div class="only-message">
                  <button class="btn btn-message" onclick="window.open('{{ partner['contactSellerLink'] }}','_blank')"><i class="giga icon-xinfeng"></i> Message seller</button>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      {% else %}
        <p style="padding: 15px 50%;white-space: nowrap">No records.</p>
      {% endif %}
      {#      #}
      {#      每行的信息#}
    </div>
  </div>

</div>


<script>
  layer.config({
    skin: 'yzc_layer',
    btnAlign: 'c'
  });
  let has_record = {% if partners %} {{ partners|length }} {% else %} 0 {% endif %};
  let list = [];
  let checkLength = 0;

  function getSellerInfo() {
    let input = $("#search-input").val();
    let url  = '/index.php?route=customerpartner/contacted_seller';
    if (input) {
      url += `&store_name=${Base64.encode(input)}`
    }
    window.location.href = url;
  }

  let Base64 = {
    encode(str) {
      return btoa(encodeURIComponent(str).replace(/%([0-9A-F]{2})/g,
        function toSolidBytes(match, p1) {
          return String.fromCharCode('0x' + p1);
        }));
    },
    decode(str) {
      return decodeURIComponent(atob(str).split('').map(function (c) {
        return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);
      }).join(''));
    }
  };
  function changeStatus(obj) {
    if (has_record == 0){
      $(obj).prop("checked", false);
      return 0;
    }
    let state = $(obj).prop("checked");
    if (state) {
      $('input[type="checkbox"]').each(function () {
        $(this).prop("checked", true);
      });
    } else {
      $('input[type="checkbox"]').each(function () {
        $(this).prop("checked", false);
      });
      list = [];
    }
  }
  function changeStatusOne(obj) {
    let state = $(obj).prop("checked");
    if (state) {
      $(obj).prop("checked", true);

      let tmp=0;
      $('input[type="checkbox"]').each((i,item)=>{
        if ( $(item).prop("checked") && $(item).prop('id') ){
          tmp++;
        }
      });
      if (tmp == has_record){
        $('#checkfirst').prop("checked", true);
      }
    } else {
      $(obj).prop("checked", false);
      $('#checkfirst').prop("checked", false);
    }
  }

  $('#batch_download').click(function () {
    if (has_record == 0){
      return 0;
    }

    $('#batch_download').attr('disabled', true);
    let state = $('input[type="checkbox"]').prop("checked");
    if (state == false && $('input[type="checkbox"]:checked').length == 0) {
      layer.alert('Please select at least one seller.', {
        closeBtn: 0,
        title: 'Info',
        btn: ['OK'],
      });
      $('#batch_download').attr('disabled', false);
    } else {
      list=[];
      $('input[type="checkbox"]').each((i,item)=>{
        if ( $(item).prop("checked") && $(item).prop('id') && $(item).attr('id').split('-')[1] ){
          list.push($(item).attr('id').split('-')[1]);
        }
      });
      let to_url = 'index.php?route=customerpartner/contacted_seller/downloadSellersCsv&user_tOKen={{ user_tOKen }}';
      layer.confirm('Please confirm the batch download ?', {
        title: 'Confirm',
        btn: ['Confirm', 'Cancel']
      }, function (index) {
        if (list.length == 0){
          layer.alert('Please select at least one seller.', {
            closeBtn: 0,
            title: 'Info',
            btn: ['OK'],
          });
          return 0;
        }
        //do something
        $('#batch_download').attr('disabled', true);

        let form = $('<form />', {action: to_url, method: "get", style: "display:none;"}).appendTo('body');
        form.append('<input type="hidden" name="route" value="customerpartner/contacted_seller/downloadSellersCsv" />');
        form.append('<input type="hidden" name="type" value="0" />');
        form.append('<input type="hidden" name="sellers_id_str" value="' + list.join(',') + '" />');
        form.submit();

        setTimeout(function () {
          $('#batch_download').attr('disabled', false);
        }, 1000);
        layer.close(index);
      });
      $('#batch_download').attr('disabled', false);
    }

  });

</script>

{#推荐#}
<style>
  .caption {
    font-size: 12px;
  }
  .store-home-name:hover {
    color: #fA6400;
  }
</style>
<div class="product-simple-grid">
  <div class="image">
    <a href="{{ product.href }}">
      {% if product.unsee == 0 %}
        <div class="con_img">
          <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}"
               class="img-responsive"/>
          {% if download_csv_privilege %}
            <input autocomplete="off" type="checkbox" id="checkbox_{{ product.product_id }}"
                   onclick="checkSingleProduct(this,{{ products_total }})" class="img_checkbox"
                   name="checkbox" data-labelauty="">
          {% endif %}
          {% if product.horn_mark == 'hot' %}
            <div class="horn-mark-hot"></div>
          {% elseif product.horn_mark == 'new' %}
            <div class="horn-mark-new"></div>
          {% elseif product.horn_mark == 'sale' %}
            <div class="horn-mark-sale"></div>
          {% endif %}
        </div>
      {% else %}
        <div class="con_img">
          <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}"
               class="img-responsive"/>
          {% if download_csv_privilege %}
            <input autocomplete="off" type="checkbox" class="img_checkbox"
                   id="checkbox_{{ product.product_id }}"
                   onclick="checkSingleProduct(this,{{ products_total }})" name="checkbox"
                   data-labelauty="">
          {% endif %}
          {% if product.horn_mark == 'hot' %}
            <div class="horn-mark-hot"></div>
          {% elseif product.horn_mark == 'new' %}
            <div class="horn-mark-new"></div>
          {% elseif product.horn_mark == 'sale' %}
            <div class="horn-mark-sale"></div>
          {% endif %}
        </div>
        <div class="shadow_img"></div>
        <div class="title_img">
          <span style="color:white;font-size: 40px;text-align: center">Unavailable</span>
        </div>
      {% endif %}
    </a>

    <div class="button-group">
      {% if isLogin %}
        <a type="button" data-toggle="tooltip" title="Download Material Package"
           onclick="download_file(this,{{ product['product_id'] }},{{ product['seller_id'] }})">
          <i class="giga icon-product-down download"></i>
        </a>
      {% endif %}

      {% if isLogin %}
        {% if product['can_sell'] == 1 and product['unsee'] == 0 %}
          {% if product['productWishList'] %}
            <a type="button" data-toggle="tooltip" title="{{ button_wishlist_remove }}"
               onclick="wishlist.remove('{{ product.product_id }}', this);">
              <i class="giga fa-heart wishlist"></i>
            </a>
          {% else %}
            <a type="button" data-toggle="tooltip" title="{{ button_wishlist_add }}"
               onclick="wishlist.add('{{ product.product_id }}', this);">
              <i class="giga fa-heart-o wishlist"></i>
            </a>
          {% endif %}
        {% else %}
          {% if product['productWishList'] %}
            {% if product['unsee'] == 1 %}
              <a type="button" data-toggle="tooltip" title="{{ button_wishlist_remove }}"
                 onclick="wishlist.unavailable('{{ product.product_id }}', this);">
                <i class="giga fa-heart wishlist"></i>
              </a>
            {% else %}
              <a type="button" data-toggle="tooltip" title="{{ button_wishlist_remove }}"
                 onclick="wishlist.remove('{{ product.product_id }}', this);">
                <i class="giga fa-heart wishlist"></i>
              </a>
            {% endif %}

          {% else %}
            {% if product['unsee'] == 1 %}
              <a type="button" data-toggle="tooltip" title="{{ button_wishlist_add }}"
                 onclick="wishlist.unavailable('{{ product.product_id }}', this);">
                <i class="giga fa-heart-o wishlist"></i>
              </a>
            {% else %}
              <a type="button" data-toggle="tooltip" title="{{ button_wishlist_add }}"
                 onclick="wishlist.add('{{ product.product_id }}', this);">
                <i class="giga fa-heart-o wishlist"></i>
              </a>
            {% endif %}
          {% endif %}

        {% endif %}

      {% endif %}
    </div>
  </div>
  <div class="caption">
    <div class="code-price-wrapper">
      <div class="code-group">
        Item Code: <strong class="swiper-no-swiping">{{ product.sku }}</strong>
        {% if product['tag'] is not empty %}
          {% for tag in product['tag'] %}
            &nbsp;{{ tag }}
          {% endfor %}
        {% endif %}
      </div>

      <div class="price-group">
        {% if product['verify']['price_available'] %}
          <span style="font-size: 18px;font-weight: bold;color: red;">
            {% if product['min_price'] == product['max_price'] %}
              {{ product['min_price_show'] }}
            {% else %}
              {{ product['min_price_show'] }}-{{ product['max_price_show'] }}
            {% endif %}
          </span>
          <span class="text-muted">/Unit</span>
        {% else %}
          {% if isLogin %}
            <span class="red">Contact seller for pricing or available quantity</span>
          {% else %}
            <a href="{{ url('account/login') }}"><span
                  class="red">Login/Register to get the price and quantity available</span></a>
          {% endif %}
        {% endif %}
      </div>

      {% if product['verify']['price_available'] %}
        <div class="price-group">
          <span class="text-muted">
            {{ txt_运费 }}:&nbsp;{{ product.extra_fee }} /Unit
          </span>
        </div>
      {% endif %}

    </div>

    <div class="store-group-button">
      <div class="store-group">
        <div class="store to_store_home"
             qa_rate="{{ product['qa_rate'] }}"
             seller_id="{{ product['seller_id'] }}"
             return_approval_rate="{{ product['return_approval_rate'] }}"
             sku="{{ product['sku'] }}"
             onclick="goToSellerStore({{ product['seller_id'] }})"
        ><span class="store-home-name">{{ product['screenname'] }} <i class="fa fa-angle-down" aria-hidden="true"></i></span>
          <div class="store-pop">
            <!--#5083-->
            {% if product['comprehensive']['seller_show']==1 %}
              <div class="text-left">
                {% if product['new_seller_score'] %}
                  <span class="score">New Seller</span>
                {% else %}
                  <span class="score" title="GIGA Index">{{ product['comprehensive']['total'] }}</span>
                {% endif %}
              </div>

            {% endif %}
            <!--100548-->
            <div class="text">
              Return Rate: {{ product['store_return_rate_mark'] }}
              {% if product['store_return_rate_mark'] == 'N/A' %}
                <i class="giga icon-V10-wenhaotishi" data-toggle="tooltip"
                   title="The volume of total units sold is not enough for judging return rate."></i>
              {% endif %}
            </div>
            <!--100548-->
            <div class="text">
              Return Approval Rate:
              {% if product['return_approval_rate'] == 0 %}
                N/A <i class="giga icon-V10-wenhaotishi" data-toggle="tooltip"
                       title="No RMA records."></i>
              {% elseif product['return_approval_rate'] > 90 %}
                High
              {% elseif product['return_approval_rate'] > 60 %}
                Moderate
              {% else %}
                Low
              {% endif %}
            </div>
            <!--100548-->
            {% if product['store_response_rate_mark'] %}
              <div class="text">
                Response Rate: {{ product['store_response_rate_mark'] }}
              </div>
            {% endif %}
            <!--100548-->
          </div>
        </div>
        <a class="chat" style="display: none;"><i class="giga icon-chat-inactive"></i></a>
        <a class="email" target="_blank"
           href="index.php?route=message/seller/addMessage&receiver_id={{ product['seller_id'] }}&item_code={{ product['sku'] }}"><i
              class="giga icon-email-grey {% if product['seller_status'] == 0 %}status_no{% endif %}"
              data-toggle="tooltip" title="Message Seller" aria-hidden="true">
          </i></a>
      </div>

    </div>

  </div>

</div>
<script>
  function goToSellerStore(sellerId) {
    window.open('index.php?route=customerpartner/profile&id=' + sellerId,"_blank")
  }
</script>


